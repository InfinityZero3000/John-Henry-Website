@model List<JohnHenryFashionWeb.Models.PaymentMethodConfig>
@{
    ViewData["Title"] = "Phương thức thanh toán";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item\"><a href=\"/admin/payments\">Thanh toán</a></li><li class=\"breadcrumb-item active\">Phương thức thanh toán</li>";
    
    var activeCount = Model?.Count(m => m.IsActive) ?? 0;
    var inactiveCount = Model?.Count(m => !m.IsActive) ?? 0;
    var totalCount = Model?.Count ?? 0;
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <h1 class="admin-page-title">
                <i data-lucide="credit-card"></i>
                Phương thức thanh toán
            </h1>
            <div>
                <a href="/admin/payments" class="admin-btn admin-btn-secondary me-2">
                    <i data-lucide="arrow-left"></i>
                    Quay lại
                </a>
                <button type="button" class="admin-btn admin-btn-primary" data-bs-toggle="modal" data-bs-target="#addMethodModal">
                    <i data-lucide="plus"></i>
                    Thêm phương thức
                </button>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="admin-alert admin-alert-success">
            <i data-lucide="check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="admin-alert admin-alert-danger">
            <i data-lucide="alert-circle"></i>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Tổng số phương thức</h3>
                    <p class="value">@totalCount</p>
                    <p class="change">Tất cả phương thức</p>
                </div>
                <div class="admin-stat-card-icon primary">
                    <i data-lucide="credit-card"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đang hoạt động</h3>
                    <p class="value">@activeCount</p>
                    <p class="change">@((activeCount > 0 && totalCount > 0 ? (activeCount * 100.0 / totalCount).ToString("F1") : "0"))% tổng số</p>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="check-circle"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Tạm ngừng</h3>
                    <p class="value">@inactiveCount</p>
                    <p class="change">@((inactiveCount > 0 && totalCount > 0 ? (inactiveCount * 100.0 / totalCount).ToString("F1") : "0"))% tổng số</p>
                </div>
                <div class="admin-stat-card-icon warning">
                    <i data-lucide="pause-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Methods Table -->
    @if (Model != null && Model.Any())
    {
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th style="width: 80px;">Icon</th>
                        <th>Phương thức</th>
                        <th>Mã</th>
                        <th>Phí giao dịch</th>
                        <th>Thứ tự</th>
                        <th>Trạng thái</th>
                        <th style="width: 180px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var method in Model.OrderBy(m => m.SortOrder))
                    {
                        <tr>
                            <td>
                                <div style="width: 50px; height: 50px; background: linear-gradient(135deg, @GetMethodColor(method.Code)); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                    <i data-lucide="@GetMethodIcon(method.Code)" style="width: 24px; height: 24px; color: white;"></i>
                                </div>
                            </td>
                            <td>
                                <div style="font-weight: 500; color: var(--admin-text); margin-bottom: 0.25rem;">
                                    @method.Name
                                </div>
                                @if (!string.IsNullOrEmpty(method.Description))
                                {
                                    <div style="font-size: 0.8125rem; color: var(--admin-text-light);">
                                        @method.Description
                                    </div>
                                }
                            </td>
                            <td>
                                <code style="padding: 0.25rem 0.5rem; background: var(--admin-bg-secondary); border-radius: 6px; font-size: 0.875rem;">
                                    @method.Code
                                </code>
                            </td>
                            <td>
                                @if (method.TransactionFeePercent > 0 || method.TransactionFeeFixed > 0)
                                {
                                    <div style="color: var(--admin-danger);">
                                        @if (method.TransactionFeePercent > 0 && method.TransactionFeeFixed > 0)
                                        {
                                            <span>@method.TransactionFeePercent% + @method.TransactionFeeFixed.ToString("N0") ₫</span>
                                        }
                                        else if (method.TransactionFeePercent > 0)
                                        {
                                            <span>@method.TransactionFeePercent%</span>
                                        }
                                        else
                                        {
                                            <span>@method.TransactionFeeFixed.ToString("N0") ₫</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="admin-badge admin-badge-success">Miễn phí</span>
                                }
                            </td>
                            <td>
                                <span style="font-weight: 500;">#@method.SortOrder</span>
                            </td>
                            <td>
                                @if (method.IsActive)
                                {
                                    <span class="admin-badge admin-badge-success">
                                        <i data-lucide="check-circle" style="width: 12px; height: 12px;"></i>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="admin-badge admin-badge-warning">
                                        <i data-lucide="pause-circle" style="width: 12px; height: 12px;"></i>
                                        Tạm ngừng
                                    </span>
                                }
                            </td>
                            <td class="actions">
                                <div style="display: flex; gap: 0.5rem; flex-wrap: center;">
                                    <button type="button" class="admin-btn admin-btn-sm admin-btn-secondary" 
                                            onclick="editMethod('@method.Id')" title="Chỉnh sửa">
                                        <i data-lucide="edit"></i>
                                    </button>
                                    @if (method.IsActive)
                                    {
                                        <button type="button" class="admin-btn admin-btn-sm admin-btn-warning" 
                                                onclick="toggleMethod('@method.Id', false)" title="Tạm ngừng">
                                            <i data-lucide="pause"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="admin-btn admin-btn-sm admin-btn-success" 
                                                onclick="toggleMethod('@method.Id', true)" title="Kích hoạt">
                                            <i data-lucide="play"></i>
                                        </button>
                                    }
                                    <button type="button" class="admin-btn admin-btn-sm admin-btn-danger" 
                                            onclick="deleteMethod('@method.Id', '@method.Name')" title="Xóa">
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="admin-card">
            <div class="admin-card-body admin-text-center" style="padding: 3rem;">
                <i data-lucide="credit-card" style="width: 64px; height: 64px; color: var(--admin-text-muted); margin-bottom: 1rem;"></i>
                <h3 style="margin-bottom: 0.5rem;">Chưa có phương thức thanh toán</h3>
                <p style="color: var(--admin-text-light); margin-bottom: 1.5rem;">
                    Vui lòng thêm phương thức thanh toán để khách hàng có thể thanh toán
                </p>
                <button type="button" class="admin-btn admin-btn-primary" data-bs-toggle="modal" data-bs-target="#addMethodModal">
                    <i data-lucide="plus"></i>
                    Thêm phương thức đầu tiên
                </button>
            </div>
        </div>
    }
</div>

<!-- Add/Edit Method Modal -->
<div class="modal fade" id="addMethodModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i data-lucide="plus-circle"></i>
                    Thêm phương thức thanh toán
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="methodForm" method="post" asp-action="AddOrUpdatePaymentMethod">
                @Html.AntiForgeryToken()
                <input type="hidden" id="methodId" name="Id" value="" />
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="admin-form-label">Tên phương thức <span style="color: var(--admin-danger);">*</span></label>
                            <input type="text" name="Name" id="methodName" class="admin-form-input" required placeholder="VD: Ví MoMo">
                        </div>
                        <div class="col-md-6">
                            <label class="admin-form-label">Mã phương thức <span style="color: var(--admin-danger);">*</span></label>
                            <input type="text" name="Code" id="methodCode" class="admin-form-input" required placeholder="VD: MOMO">
                        </div>
                        <div class="col-12">
                            <label class="admin-form-label">Mô tả</label>
                            <textarea name="Description" id="methodDescription" class="admin-form-input" rows="2" placeholder="Mô tả ngắn về phương thức thanh toán"></textarea>
                        </div>
                        <div class="col-md-4">
                            <label class="admin-form-label">Phí % giao dịch</label>
                            <input type="number" name="TransactionFeePercent" id="methodFeePercent" class="admin-form-input" step="0.01" min="0" placeholder="0.00">
                        </div>
                        <div class="col-md-4">
                            <label class="admin-form-label">Phí cố định (₫)</label>
                            <input type="number" name="TransactionFeeFixed" id="methodFeeFixed" class="admin-form-input" step="1" min="0" placeholder="0">
                        </div>
                        <div class="col-md-4">
                            <label class="admin-form-label">Thứ tự hiển thị</label>
                            <input type="number" name="SortOrder" id="methodSortOrder" class="admin-form-input" min="0" value="0">
                        </div>
                        <div class="col-md-6">
                            <label class="admin-form-label">Logo URL</label>
                            <input type="url" name="LogoUrl" id="methodLogoUrl" class="admin-form-input" placeholder="https://...">
                        </div>
                        <div class="col-md-6">
                            <label class="admin-form-label">Trạng thái</label>
                            <select name="IsActive" id="methodIsActive" class="admin-form-select">
                                <option value="true">Hoạt động</option>
                                <option value="false">Tạm ngừng</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="admin-form-label">Cấu hình API (JSON)</label>
                            <textarea name="ApiConfiguration" id="methodApiConfig" class="admin-form-input" rows="4" placeholder='{"apiKey": "", "secretKey": "", "endpoint": ""}'></textarea>
                            <small style="color: var(--admin-text-light);">Nhập cấu hình API dạng JSON nếu cần thiết</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="admin-btn admin-btn-secondary" data-bs-dismiss="modal">
                        <i data-lucide="x"></i>
                        Hủy
                    </button>
                    <button type="submit" class="admin-btn admin-btn-primary">
                        <i data-lucide="save"></i>
                        Lưu phương thức
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Toggle payment method status
        function toggleMethod(id, activate) {
            const action = activate ? 'kích hoạt' : 'tạm ngừng';
            if (!confirm(`Bạn có chắc chắn muốn ${action} phương thức thanh toán này?`)) {
                return;
            }

            fetch('/admin/payments/methods/toggle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ id: id })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + (data.message || 'Vui lòng thử lại'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra. Vui lòng thử lại');
            });
        }

        // Edit payment method
        function editMethod(id) {
            // TODO: Load method data and populate form
            $('#addMethodModal').modal('show');
            $('#methodId').val(id);
            $('.modal-title').html('<i data-lucide="edit"></i> Chỉnh sửa phương thức thanh toán');
            lucide.createIcons();
        }

        // Delete payment method
        function deleteMethod(id, name) {
            if (!confirm(`Bạn có chắc chắn muốn xóa phương thức "${name}"?\n\nLưu ý: Hành động này không thể hoàn tác!`)) {
                return;
            }

            fetch(`/admin/payments/methods/delete/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + (data.message || 'Vui lòng thử lại'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra. Vui lòng thử lại');
            });
        }

        // Auto-hide alerts
        setTimeout(function() {
            var alerts = document.querySelectorAll('.admin-alert');
            alerts.forEach(function(alert) {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);

        // Reset modal on close
        $('#addMethodModal').on('hidden.bs.modal', function () {
            $('#methodForm')[0].reset();
            $('#methodId').val('');
            $('.modal-title').html('<i data-lucide="plus-circle"></i> Thêm phương thức thanh toán');
            lucide.createIcons();
        });

        // Initialize modal icons
        $('#addMethodModal').on('shown.bs.modal', function () {
            lucide.createIcons();
        });
    </script>
}

@functions {
    string GetMethodIcon(string methodCode)
    {
        return methodCode switch
        {
            "COD" => "banknote",
            "VNPay" => "credit-card",
            "Momo" => "smartphone",
            "ZaloPay" => "wallet",
            "BankTransfer" => "building-2",
            "CreditCard" => "credit-card",
            "Stripe" => "credit-card",
            _ => "credit-card"
        };
    }

    string GetMethodColor(string methodCode)
    {
        return methodCode switch
        {
            "COD" => "#10b981, #059669",
            "VNPay" => "#3b82f6, #2563eb",
            "Momo" => "#ec4899, #db2777",
            "ZaloPay" => "#0ea5e9, #0284c7",
            "BankTransfer" => "#8b5cf6, #7c3aed",
            "CreditCard" => "#f59e0b, #d97706",
            "Stripe" => "#635bff, #5469d4",
            _ => "#6b7280, #4b5563"
        };
    }
}
