@model JohnHenryFashionWeb.Models.WithdrawalRequest
@{
    ViewData["Title"] = "Chi tiết Rút tiền";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .payment-container {
        padding: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: calc(100vh - 80px);
    }

    .page-header-glass {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .detail-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #6b7280;
    }

    .info-value {
        color: #111827;
        font-weight: 500;
    }

    .badge-modern {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .badge-pending {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
    }

    .badge-approved {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }

    .badge-rejected {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .amount-highlight {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--jh-red);
        text-align: center;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1));
        border-radius: 16px;
        margin-bottom: 2rem;
    }

    .btn-modern {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-success-modern {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }

    .btn-success-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        color: white;
    }

    .btn-danger-modern {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .btn-danger-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        color: white;
    }

    .form-control-modern {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .form-control-modern:focus {
        border-color: var(--jh-red);
        box-shadow: 0 0 0 0.2rem rgba(206, 25, 58, 0.25);
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: var(--jh-red);
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: -2.3rem;
        top: 0.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--jh-red);
    }

    .alert-custom {
        border-radius: 12px;
        padding: 1rem 1.5rem;
        border-left: 4px solid;
    }
</style>

<div class="payment-container">
    <!-- Page Header -->
    <div class="page-header-glass">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="fas fa-file-invoice-dollar me-2" style="color: var(--jh-red);"></i>
                    Chi tiết Yêu cầu Rút tiền
                </h2>
                <p class="text-muted mb-0">@Model.WithdrawalNumber</p>
            </div>
            <a asp-action="Withdrawals" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Amount -->
        <div class="col-lg-8">
            <div class="detail-card">
                <div class="amount-highlight">
                    <p class="text-muted mb-2">Số tiền rút</p>
                    <div>@Model.Amount.ToString("N0") ₫</div>
                </div>

                <h4 class="mb-4">
                    <i class="fas fa-info-circle me-2" style="color: var(--jh-red);"></i>
                    Thông tin Yêu cầu
                </h4>

                <div class="info-row">
                    <span class="info-label">Mã yêu cầu:</span>
                    <span class="info-value">@Model.WithdrawalNumber</span>
                </div>

                <div class="info-row">
                    <span class="info-label">Ngày yêu cầu:</span>
                    <span class="info-value">@Model.RequestedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                </div>

                <div class="info-row">
                    <span class="info-label">Seller:</span>
                    <span class="info-value">
                        @if (Model.Seller != null)
                        {
                            <strong>@Model.Seller.Email</strong>
                        }
                    </span>
                </div>

                <div class="info-row">
                    <span class="info-label">Trạng thái:</span>
                    <span class="info-value">
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge-modern badge-pending">
                                <i class="fas fa-clock me-1"></i>Chờ duyệt
                            </span>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <span class="badge-modern badge-approved">
                                <i class="fas fa-check me-1"></i>Đã duyệt
                            </span>
                        }
                        else if (Model.Status == "Rejected")
                        {
                            <span class="badge-modern badge-rejected">
                                <i class="fas fa-times me-1"></i>Từ chối
                            </span>
                        }
                        else if (Model.Status == "Completed")
                        {
                            <span class="badge bg-success">Hoàn thành</span>
                        }
                    </span>
                </div>

                @if (Model.ProcessedAt.HasValue)
                {
                    <div class="info-row">
                        <span class="info-label">Ngày xử lý:</span>
                        <span class="info-value">@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ProcessedBy))
                {
                    <div class="info-row">
                        <span class="info-label">Người xử lý:</span>
                        <span class="info-value">
                            <span class="badge bg-info">@Model.ProcessedBy</span>
                        </span>
                    </div>
                }
            </div>

            <!-- Bank Info -->
            <div class="detail-card">
                <h4 class="mb-4">
                    <i class="fas fa-university me-2" style="color: var(--jh-red);"></i>
                    Thông tin Ngân hàng
                </h4>

                <div class="info-row">
                    <span class="info-label">Ngân hàng:</span>
                    <span class="info-value"><strong>@Model.BankName</strong></span>
                </div>

                <div class="info-row">
                    <span class="info-label">Số tài khoản:</span>
                    <span class="info-value">
                        <code style="font-size: 1.1rem; color: var(--jh-red);">@Model.AccountNumber</code>
                    </span>
                </div>

                <div class="info-row">
                    <span class="info-label">Chủ tài khoản:</span>
                    <span class="info-value">@Model.AccountName</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Branch))
                {
                    <div class="info-row">
                        <span class="info-label">Chi nhánh:</span>
                        <span class="info-value">@Model.Branch</span>
                    </div>
                }
            </div>

            <!-- Notes and Reason -->
            @if (!string.IsNullOrEmpty(Model.AdminNotes))
            {
                <div class="detail-card">
                    <div class="alert-custom alert-info" style="border-left-color: #3b82f6;">
                        <h6 class="mb-2">
                            <i class="fas fa-sticky-note me-2"></i>
                            Ghi chú của Admin
                        </h6>
                        <p class="mb-0">@Model.AdminNotes</p>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.RejectionReason))
            {
                <div class="detail-card">
                    <div class="alert-custom alert-danger" style="border-left-color: #ef4444;">
                        <h6 class="mb-2">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Lý do từ chối
                        </h6>
                        <p class="mb-0">@Model.RejectionReason</p>
                    </div>
                </div>
            }
        </div>

        <!-- Actions -->
        <div class="col-lg-4">
            @if (Model.Status == "Pending")
            {
                <div class="detail-card">
                    <h5 class="mb-4">
                        <i class="fas fa-tasks me-2" style="color: var(--jh-red);"></i>
                        Xử lý Yêu cầu
                    </h5>

                    <!-- Approve Form -->
                    <form method="post" asp-action="ApproveWithdrawal" asp-route-id="@Model.Id" class="mb-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ghi chú</label>
                            <textarea name="notes" class="form-control-modern" rows="3" placeholder="Nhập ghi chú (không bắt buộc)..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-success-modern w-100" onclick="return confirm('Bạn có chắc chắn muốn phê duyệt yêu cầu này?');">
                            <i class="fas fa-check me-2"></i> Phê duyệt
                        </button>
                    </form>

                    <div class="text-center my-3">
                        <span class="text-muted">hoặc</span>
                    </div>

                    <!-- Reject Form -->
                    <form method="post" asp-action="RejectWithdrawal" asp-route-id="@Model.Id">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Lý do từ chối <span class="text-danger">*</span></label>
                            <textarea name="reason" class="form-control-modern" rows="3" placeholder="Nhập lý do từ chối..." required></textarea>
                            <small class="text-muted">Lý do này sẽ được gửi cho Seller</small>
                        </div>
                        <button type="submit" class="btn btn-danger-modern w-100" onclick="return confirm('Bạn có chắc chắn muốn từ chối yêu cầu này?');">
                            <i class="fas fa-times me-2"></i> Từ chối
                        </button>
                    </form>
                </div>
            }

            <!-- Timeline -->
            <div class="detail-card">
                <h5 class="mb-4">
                    <i class="fas fa-history me-2" style="color: var(--jh-red);"></i>
                    Lịch sử
                </h5>

                <div class="timeline">
                    <div class="timeline-item">
                        <div class="fw-bold">Yêu cầu tạo</div>
                        <div class="small text-muted">@Model.RequestedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    @if (Model.ProcessedAt.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="fw-bold">
                                @if (Model.Status == "Approved")
                                {
                                    <span class="text-success">Đã phê duyệt</span>
                                }
                                else if (Model.Status == "Rejected")
                                {
                                    <span class="text-danger">Bị từ chối</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="text-success">Hoàn thành</span>
                                }
                            </div>
                            <div class="small text-muted">@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            @if (!string.IsNullOrEmpty(Model.ProcessedBy))
                            {
                                <div class="small">Bởi: @Model.ProcessedBy</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
