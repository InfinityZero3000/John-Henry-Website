@model IEnumerable<JohnHenryFashionWeb.Models.EmailConfiguration>
@{
    ViewData["Title"] = "Email Configuration";
}

<style>
    .glassmorphism {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .settings-gradient {
        background: linear-gradient(135deg, #00d2ff 0%, #3a47d5 100%);
    }
</style>

<div class="settings-gradient min-vh-100 py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="glassmorphism p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="text-white mb-1">
                                <i class="fas fa-envelope me-2"></i>Email Configuration
                            </h2>
                            <p class="text-white-50 mb-0">Manage email server settings</p>
                        </div>
                        <div>
                            <a href="@Url.Action("CreateEmail")" class="btn btn-light me-2">
                                <i class="fas fa-plus me-2"></i>Add Configuration
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-outline-light">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="glassmorphism p-4">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Provider</th>
                                        <th>SMTP Host</th>
                                        <th>Port</th>
                                        <th>From Email</th>
                                        <th>SSL</th>
                                        <th>Status</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var config in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="text-white fw-bold">@config.Provider</div>
                                                @if (config.IsDefault)
                                                {
                                                    <span class="badge bg-primary">Default</span>
                                                }
                                            </td>
                                            <td><span class="text-white-50">@config.SmtpHost</span></td>
                                            <td><span class="text-white">@config.SmtpPort</span></td>
                                            <td><span class="text-white">@config.FromEmail</span></td>
                                            <td>
                                                @if (config.UseSsl)
                                                {
                                                    <i class="fas fa-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-times-circle text-danger"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (config.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("EditEmail", new { id = config.Id })" class="btn btn-sm btn-info me-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@config.Id', '@config.Provider')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-envelope fa-3x text-white-50 mb-3"></i>
                            <p class="text-white-50">No email configurations</p>
                            <a href="@Url.Action("CreateEmail")" class="btn btn-light mt-3">
                                <i class="fas fa-plus me-2"></i>Add First Configuration
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-white">Delete Configuration</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="deleteForm" method="post">
                @@Html.AntiForgeryToken()
                <div class="modal-body">
                    <p class="text-white">Delete <strong id="providerName"></strong>?</p>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('providerName').textContent = name;
            document.getElementById('deleteForm').action = `/admin/settings/email/${id}/delete`;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
