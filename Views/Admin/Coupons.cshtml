@model IEnumerable<JohnHenryFashionWeb.Models.Coupon>
@{
    ViewData["Title"] = "Quản lý mã giảm giá";
    ViewData["CurrentSection"] = "Coupons";
    ViewData["PageIcon"] = "ticket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <h1 class="admin-page-title">
                <i data-lucide="ticket"></i>
                Quản lý mã giảm giá
            </h1>
        
            <div class="admin-page-header-actions">
                <a href="@Url.Action("CreateCoupon", "Admin")" class="admin-btn admin-btn-primary">
                    <i data-lucide="plus"></i>
                    Tạo mã mới
                </a>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h5 class="admin-card-title">Danh sách mã giảm giá</h5>
        </div>
        <div class="admin-card-body">
            @if (Model.Any())
            {
                <div class="admin-table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Loại</th>
                                <th>Giá trị</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th>Số lần sử dụng</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coupon in Model)
                            {
                                <tr>
                                    <td>
                                        <code class="admin-code">@coupon.Code</code>
                                    </td>
                                    <td>@coupon.Name</td>
                                    <td>
                                        @if (coupon.Type == "percentage")
                                        {
                                            <span class="admin-badge admin-badge-info">Phần trăm</span>
                                        }
                                        else
                                        {
                                            <span class="admin-badge admin-badge-success">Số tiền</span>
                                        }
                                    </td>
                                    <td>
                                        @if (coupon.Type == "percentage")
                                        {
                                            <strong>@coupon.Value%</strong>
                                        }
                                        else
                                        {
                                            <strong>@coupon.Value.ToString("N0") VNĐ</strong>
                                        }
                                    </td>
                                    <td>@coupon.StartDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@coupon.EndDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span>@coupon.UsageCount/@(coupon.UsageLimit?.ToString() ?? "∞")</span>
                                    </td>
                                    <td>
                                        @if (coupon.IsActive)
                                        {
                                            @if (coupon.EndDate.HasValue && coupon.EndDate < DateTime.Now)
                                            {
                                                <span class="admin-badge admin-badge-secondary">Hết hạn</span>
                                            }
                                            else if (coupon.UsageLimit.HasValue && coupon.UsageCount >= coupon.UsageLimit)
                                            {
                                                <span class="admin-badge admin-badge-warning">Hết lượt</span>
                                            }
                                            else
                                            {
                                                <span class="admin-badge admin-badge-success">Hoạt động</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="admin-badge admin-badge-danger">Tạm dừng</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <form asp-action="ToggleCoupon" asp-route-id="@coupon.Id" method="post" class="d-inline">
                                                <button type="submit" class="admin-btn admin-btn-sm @(coupon.IsActive ? "admin-btn-warning" : "admin-btn-success")" 
                                                        title="@(coupon.IsActive ? "Tạm dừng" : "Kích hoạt")">
                                                    <i data-lucide="@(coupon.IsActive ? "pause" : "play")"></i>
                                                </button>
                                            </form>
                                            <button type="button" class="admin-btn admin-btn-sm admin-btn-secondary" 
                                                    onclick="copyToClipboard('@coupon.Code')" title="Copy mã">
                                                <i data-lucide="copy"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="admin-empty-state">
                    <i data-lucide="ticket" style="width: 64px; height: 64px;"></i>
                    <h5>Chưa có mã giảm giá nào</h5>
                    <p>Tạo mã giảm giá đầu tiên để khuyến khích khách hàng mua sắm</p>
                    <a href="@Url.Action("CreateCoupon", "Admin")" class="admin-btn admin-btn-primary">
                        <i data-lucide="plus"></i>
                        Tạo mã giảm giá
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success message
                if (typeof Swal !== 'undefined') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Đã copy!',
                        text: `Mã "${text}" đã được copy vào clipboard`,
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    alert(`Mã "${text}" đã được copy!`);
                }
            }, function(err) {
                console.error('Could not copy text: ', err);
            });
        }
    </script>
}