<script>
    let currentBackupId = null;

    function createBackup() {
        bootstrap.Modal.getOrCreateInstance(document.getElementById('createBackupModal')).show();
    }

    function startBackup() {
        const backupName = document.getElementById('backupName').value;
        const backupType = document.getElementById('backupType').value;
        const description = document.getElementById('backupDescription').value;
        const compress = document.getElementById('compressNow').checked;

        if (!backupName) {
            alert('Vui lòng nhập tên backup');
            return;
        }

        // Close modal and show progress
        bootstrap.Modal.getInstance(document.getElementById('createBackupModal')).hide();
        document.getElementById('backupProgressCard').style.display = 'block';

        // Simulate backup progress
        simulateBackupProgress();
    }

    function simulateBackupProgress() {
        let progress = 0;
        const steps = [
            'Khởi tạo backup...',
            'Đang backup bảng Users...',
            'Đang backup bảng Products...',
            'Đang backup bảng Orders...',
            'Đang nén dữ liệu...',
            'Hoàn thành backup'
        ];
        let currentStepIndex = 0;

        const interval = setInterval(() => {
            progress += Math.random() * 20;
            if (progress > 100) progress = 100;

            document.getElementById('backupProgress').style.width = progress + '%';
            document.getElementById('backupProgress').textContent = Math.round(progress) + '%';
            
            // Update current step
            const stepIndex = Math.floor((progress / 100) * steps.length);
            if (stepIndex < steps.length && stepIndex !== currentStepIndex) {
                currentStepIndex = stepIndex;
                document.getElementById('currentStep').textContent = steps[stepIndex];
            }

            // Update processed size
            const processedSize = Math.round((progress / 100) * 245);
            document.getElementById('processedSize').textContent = processedSize + ' MB';

            // Update remaining time
            const remainingMinutes = Math.round((100 - progress) / 20);
            document.getElementById('remainingTime').textContent = remainingMinutes + ':00';

            if (progress >= 100) {
                clearInterval(interval);
                setTimeout(() => {
                    document.getElementById('backupProgressCard').style.display = 'none';
                    alert('Backup đã hoàn thành thành công!');
                    location.reload();
                }, 1000);
            }
        }, 500);
    }

    function cancelBackup() {
        if (confirm('Bạn có chắc chắn muốn hủy backup đang thực hiện?')) {
            document.getElementById('backupProgressCard').style.display = 'none';
        }
    }

    function downloadBackup(backupId) {
        window.location.href = `/admin/backups/download/${backupId}`;
    }

    function restoreBackup(backupId) {
        currentBackupId = backupId;
        document.getElementById('restoreBackupName').textContent = backupId;
        document.getElementById('confirmRestore').checked = false;
        document.getElementById('confirmRestoreBtn').disabled = true;
        bootstrap.Modal.getOrCreateInstance(document.getElementById('restoreModal')).show();
    }

    function confirmRestore() {
        if (!currentBackupId) return;

        // Simulate restore process
