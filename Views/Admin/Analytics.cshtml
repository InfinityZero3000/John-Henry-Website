@{
    ViewData["Title"] = "Analytics - Phân tích dữ liệu";
    ViewData["CurrentSection"] = "analytics";
    Layout = "~/Views/Shared/_AdminLayout_New.cshtml";
}

<div class="admin-content-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="admin-page-title">
                <i class="fas fa-chart-line text-primary"></i>
                Analytics
            </h2>
            <p class="admin-page-subtitle">Phân tích dữ liệu và xu hướng kinh doanh</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm" onclick="refreshAnalytics()">
                <i class="fas fa-sync-alt"></i> Làm mới
            </button>
            <button class="btn btn-primary btn-sm" onclick="exportAnalytics()">
                <i class="fas fa-download"></i> Export
            </button>
        </div>
    </div>
</div>

<div class="admin-content-body">
    <!-- Analytics Tabs -->
    <div class="card border-0 mb-4">
        <div class="card-body p-0">
            <ul class="nav nav-tabs analytics-tabs" id="analyticsTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">
                        <i class="fas fa-chart-pie"></i> Tổng quan
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sales-tab" data-bs-toggle="tab" data-bs-target="#sales" type="button" role="tab">
                        <i class="fas fa-shopping-cart"></i> Bán hàng
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="customers-tab" data-bs-toggle="tab" data-bs-target="#customers" type="button" role="tab">
                        <i class="fas fa-users"></i> Khách hàng
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="products-tab" data-bs-toggle="tab" data-bs-target="#products" type="button" role="tab">
                        <i class="fas fa-box"></i> Sản phẩm
                    </button>
                </li>
            </ul>

            <div class="tab-content analytics-content" id="analyticsTabContent">
                <!-- Overview Tab -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel">
                    <div class="row">
                        <!-- KPI Cards -->
                        <div class="col-lg-3 col-6 mb-4">
                            <div class="analytics-kpi-card">
                                <div class="kpi-icon bg-primary">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div class="kpi-content">
                                    <h3 class="kpi-value">₫125.6M</h3>
                                    <p class="kpi-label">Doanh thu tháng</p>
                                    <span class="kpi-trend positive">
                                        <i class="fas fa-arrow-up"></i> +12.5%
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-6 mb-4">
                            <div class="analytics-kpi-card">
                                <div class="kpi-icon bg-success">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <div class="kpi-content">
                                    <h3 class="kpi-value">2,847</h3>
                                    <p class="kpi-label">Đơn hàng</p>
                                    <span class="kpi-trend positive">
                                        <i class="fas fa-arrow-up"></i> +8.3%
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-6 mb-4">
                            <div class="analytics-kpi-card">
                                <div class="kpi-icon bg-info">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="kpi-content">
                                    <h3 class="kpi-value">1,423</h3>
                                    <p class="kpi-label">Khách hàng mới</p>
                                    <span class="kpi-trend positive">
                                        <i class="fas fa-arrow-up"></i> +15.7%
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-6 mb-4">
                            <div class="analytics-kpi-card">
                                <div class="kpi-icon bg-warning">
                                    <i class="fas fa-percentage"></i>
                                </div>
                                <div class="kpi-content">
                                    <h3 class="kpi-value">3.2%</h3>
                                    <p class="kpi-label">Tỷ lệ chuyển đổi</p>
                                    <span class="kpi-trend negative">
                                        <i class="fas fa-arrow-down"></i> -2.1%
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Row -->
                    <div class="row">
                        <div class="col-lg-8 mb-4">
                            <div class="analytics-chart-card">
                                <div class="chart-header">
                                    <h5 class="chart-title">Doanh thu theo thời gian</h5>
                                    <div class="chart-controls">
                                        <select class="form-select form-select-sm">
                                            <option>30 ngày qua</option>
                                            <option>3 tháng qua</option>
                                            <option>6 tháng qua</option>
                                            <option>12 tháng qua</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="chart-body">
                                    <canvas id="revenueChart" height="300"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 mb-4">
                            <div class="analytics-chart-card">
                                <div class="chart-header">
                                    <h5 class="chart-title">Top danh mục</h5>
                                </div>
                                <div class="chart-body">
                                    <canvas id="categoryChart" height="300"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sales Tab -->
                <div class="tab-pane fade" id="sales" role="tabpanel">
                    <div class="row">
                        <div class="col-12">
                            <div class="analytics-table-card">
                                <div class="table-header">
                                    <h5 class="table-title">Chi tiết bán hàng</h5>
                                    <div class="table-controls">
                                        <input type="date" class="form-control form-control-sm" id="salesDateFrom">
                                        <input type="date" class="form-control form-control-sm" id="salesDateTo">
                                        <button class="btn btn-primary btn-sm">Lọc</button>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Ngày</th>
                                                <th>Đơn hàng</th>
                                                <th>Doanh thu</th>
                                                <th>Khách hàng</th>
                                                <th>AOV</th>
                                                <th>Tỷ lệ chuyển đổi</th>
                                            </tr>
                                        </thead>
                                        <tbody id="salesTableBody">
                                            <!-- Sales data will be loaded here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customers Tab -->
                <div class="tab-pane fade" id="customers" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-6 mb-4">
                            <div class="analytics-chart-card">
                                <div class="chart-header">
                                    <h5 class="chart-title">Khách hàng mới theo tháng</h5>
                                </div>
                                <div class="chart-body">
                                    <canvas id="newCustomersChart"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 mb-4">
                            <div class="analytics-chart-card">
                                <div class="chart-header">
                                    <h5 class="chart-title">Phân bố khách hàng theo vùng</h5>
                                </div>
                                <div class="chart-body">
                                    <canvas id="customerLocationChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Tab -->
                <div class="tab-pane fade" id="products" role="tabpanel">
                    <div class="row">
                        <div class="col-12">
                            <div class="analytics-table-card">
                                <div class="table-header">
                                    <h5 class="table-title">Hiệu suất sản phẩm</h5>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th>Danh mục</th>
                                                <th>Bán ra</th>
                                                <th>Doanh thu</th>
                                                <th>Tồn kho</th>
                                                <th>Đánh giá</th>
                                            </tr>
                                        </thead>
                                        <tbody id="productsTableBody">
                                            <!-- Products data will be loaded here -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .analytics-tabs .nav-link {
        border: none;
        padding: 15px 25px;
        color: #64748b;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.3s ease;
    }

    .analytics-tabs .nav-link.active {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        color: white;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

    .analytics-content {
        padding: 30px;
        min-height: 600px;
    }

    .analytics-kpi-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease;
        height: 140px;
        display: flex;
        align-items: center;
    }

    .analytics-kpi-card:hover {
        transform: translateY(-5px);
    }

    .kpi-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        color: white;
        font-size: 24px;
    }

    .kpi-content {
        flex: 1;
    }

    .kpi-value {
        font-size: 24px;
        font-weight: 700;
        margin: 0;
        color: #1f2937;
    }

    .kpi-label {
        color: #64748b;
        margin: 5px 0;
        font-size: 14px;
    }

    .kpi-trend {
        font-size: 12px;
        font-weight: 600;
    }

    .kpi-trend.positive {
        color: #16a34a;
    }

    .kpi-trend.negative {
        color: #dc2626;
    }

    .analytics-chart-card, .analytics-table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .chart-header, .table-header {
        padding: 20px 25px;
        border-bottom: 1px solid #f1f5f9;
        display: flex;
        justify-content: between;
        align-items: center;
    }

    .chart-title, .table-title {
        margin: 0;
        font-size: 16px;
        font-weight: 600;
        color: #1f2937;
    }

    .chart-controls, .table-controls {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .chart-body {
        padding: 25px;
    }

    .table-responsive {
        max-height: 500px;
    }
</style>

<script>
    // Analytics functionality
    function refreshAnalytics() {
        // Implement refresh logic
        location.reload();
    }

    function exportAnalytics() {
        // Implement export logic
        alert('Export analytics functionality');
    }

    // Initialize charts when document is ready
    document.addEventListener('DOMContentLoaded', function() {
        initializeAnalyticsCharts();
    });

    function initializeAnalyticsCharts() {
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Doanh thu (triệu ₫)',
                    data: [85, 92, 78, 105, 98, 125],
                    borderColor: 'var(--primary-color)',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Category Chart
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['Áo', 'Quần', 'Giày', 'Phụ kiện'],
                datasets: [{
                    data: [35, 28, 22, 15],
                    backgroundColor: [
                        'var(--primary-color)',
                        'var(--accent-color)', 
                        '#10b981',
                        '#f59e0b'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    }
</script>