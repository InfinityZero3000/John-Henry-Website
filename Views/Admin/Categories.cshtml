@model JohnHenryFashionWeb.ViewModels.CategoryListViewModel
@{
    ViewData["Title"] = "Danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item active\">Danh mục</li>";
    
    var totalCategories = Model.Categories.Count();
    var activeCategories = Model.Categories.Count(c => c.IsActive);
    var parentCategories = Model.Categories.Count(c => !c.ParentId.HasValue);
    var totalProducts = Model.Categories.Sum(c => c.ProductCount);
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <h1 class="admin-page-title">
                <i data-lucide="layers"></i>
                Danh mục
            </h1>
            <div class="admin-flex-center admin-gap-sm">
                <button class="admin-btn admin-btn-secondary" onclick="location.href='@Url.Action("CreateCategoriesFromImages")'">
                    <i data-lucide="wand-2"></i>
                    Tạo từ thư mục ảnh
                </button>
                <a href="@Url.Action("CreateCategory")" class="admin-btn admin-btn-primary">
                    <i data-lucide="plus"></i>
                    Thêm danh mục
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Tổng danh mục</h3>
                    <p class="value">@totalCategories</p>
                    <p class="change">Tất cả danh mục</p>
                </div>
                <div class="admin-stat-card-icon primary">
                    <i data-lucide="layers"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đang hoạt động</h3>
                    <p class="value">@activeCategories</p>
                    <p class="change">@((totalCategories > 0 ? (activeCategories * 100.0 / totalCategories).ToString("F1") : "0"))% tổng số</p>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="check-circle"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Danh mục chính</h3>
                    <p class="value">@parentCategories</p>
                    <p class="change">Cấp cao nhất</p>
                </div>
                <div class="admin-stat-card-icon warning">
                    <i data-lucide="folder-tree"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Tổng sản phẩm</h3>
                    <p class="value">@totalProducts</p>
                    <p class="change">Trong tất cả danh mục</p>
                </div>
                <div class="admin-stat-card-icon info">
                    <i data-lucide="package"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="admin-filters">
        <form method="get" action="@Url.Action("Categories")">
            <div class="row g-3 align-items-end">
                <!-- Search Box -->
                <div class="col-md-8">
                    <label class="admin-form-label">Tìm kiếm</label>
                    <div class="admin-search-box">
                        <i data-lucide="search" class="search-icon"></i>
                        <input type="text" name="search" class="admin-form-input" 
                               placeholder="Tìm kiếm danh mục theo tên..." 
                               value="@Model.SearchTerm">
                    </div>
                </div>

                <!-- Search Button -->
                <div class="col-md-2">
                    <button type="submit" class="admin-btn admin-btn-primary" style="width: 100%;">
                        <i data-lucide="search"></i>
                        Tìm kiếm
                    </button>
                </div>

                <!-- Reset Button -->
                <div class="col-md-2">
                    <a href="@Url.Action("Categories")" class="admin-btn admin-btn-secondary" style="width: 100%;">
                        <i data-lucide="rotate-ccw"></i>
                        Đặt lại
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Categories Table -->
    @if (Model.Categories.Any())
    {
        <div class="admin-table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Danh mục cha</th>
                        <th>Mô tả</th>
                        <th style="width: 100px;">Số sản phẩm</th>
                        <th style="width: 120px;">Trạng thái</th>
                        <th style="width: 120px;">Ngày tạo</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>
                                <strong>@category.Name</strong>
                                <br>
                                @if (category.ParentId.HasValue)
                                {
                                    <small class="text-muted">Danh mục con</small>
                                }
                                else
                                {
                                    <small class="text-primary">Danh mục chính</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.ParentName))
                                {
                                    <span class="badge bg-secondary">@category.ParentName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <div style="max-width: 200px;">
                                        @if (category.Description.Length > 50)
                                        {
                                            @(category.Description.Substring(0, 50) + "...")
                                        }
                                        else
                                        {
                                            @category.Description
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@category.ProductCount</span>
                            </td>
                            <td>
                                @if (category.IsActive)
                                {
                                    <span class="admin-badge admin-badge-success">
                                        <i data-lucide="check-circle"></i>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="admin-badge admin-badge-secondary">
                                        <i data-lucide="x-circle"></i>
                                        Không hoạt động
                                    </span>
                                }
                            </td>
                            <td>
                                <small>@category.CreatedAt.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td class="actions">
                                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                    <a href="@Url.Action("EditCategory", new { id = category.Id })" 
                                       class="admin-btn admin-btn-sm admin-btn-primary" title="Chỉnh sửa">
                                        <i data-lucide="edit"></i>
                                    </a>
                                    
                                    @if (category.ProductCount == 0)
                                    {
                                        <form method="post" action="@Url.Action("DeleteCategory", new { id = category.Id })" 
                                              style="display: inline;" onsubmit="return confirmDelete('Bạn có chắc chắn muốn xóa danh mục này?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="admin-btn admin-btn-sm admin-btn-danger" title="Xóa">
                                                <i data-lucide="trash-2"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="admin-btn admin-btn-sm admin-btn-secondary" disabled title="Không thể xóa - có sản phẩm">
                                            <i data-lucide="trash-2"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="admin-card">
            <div class="admin-card-body admin-text-center" style="padding: 3rem;">
                <i data-lucide="inbox" style="width: 64px; height: 64px; color: var(--admin-text-muted); margin-bottom: 1rem;"></i>
                <h3 style="margin-bottom: 0.5rem;">Không có danh mục nào</h3>
                <p style="color: var(--admin-text-light); margin-bottom: 1.5rem;">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <text>Không tìm thấy danh mục phù hợp với từ khóa tìm kiếm</text>
                    }
                    else
                    {
                        <text>Chưa có danh mục nào được tạo. Hãy thêm danh mục đầu tiên!</text>
                    }
                </p>
                <div class="admin-flex-center admin-gap-sm">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Action("Categories")" class="admin-btn admin-btn-secondary">
                            <i data-lucide="x"></i>
                            Xóa bộ lọc
                        </a>
                    }
                    <a href="@Url.Action("CreateCategory")" class="admin-btn admin-btn-primary">
                        <i data-lucide="plus"></i>
                        Thêm danh mục
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Confirm delete function
        function confirmDelete(message) {
            return confirm(message);
        }
        
        // Add fade-in animations
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    row.style.transition = 'all 0.3s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, index * 50);
            });
        });
    </script>
}
