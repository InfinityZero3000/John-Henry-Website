        }

        /* Activity Timeline */
        .activity-item {
            display: flex;
            align-items: center;
            padding: 0.875rem;
            border-bottom: 1px solid #f0f2f5;
            transition: background 0.2s ease;
            border-radius: 6px;
            margin-bottom: 0.5rem;
        }

        .activity-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .activity-item:hover {
            background: #f8f9fa;
        }

        .activity-icon {
            width: 42px;
            height: 42px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            font-size: 1.125rem;
        }

        .activity-content {
            flex: 1;
            margin: 0 1rem;
            min-width: 0;
        }

        .activity-title {
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 0.25rem;
            font-size: 0.9375rem;
        }

        .activity-meta {
            font-size: 0.8125rem;
            color: #6c757d;
        }

        .activity-time {
            text-align: right;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .activity-time .badge {
            font-weight: 600;
            padding: 0.375rem 0.625rem;
        }

        /* Alert Styles */
        .alert {
            border-radius: 6px;
            border-left: 3px solid;
            padding: 0.875rem 1rem;
        }

        .alert-warning {
            border-left-color: #ffc107;
            background: #fffbf0;
        }

        .alert-info {
            border-left-color: #17a2b8;
            background: #f0f9fb;
        }

        /* Chart Container */
        .chart-container {
            position: relative;
            height: 320px;
            margin-top: 0.5rem;
        }

        /* Period Toggle */
        .period-toggle {
            display: inline-flex;
            border: 1px solid #e3e6ec;
            border-radius: 6px;
            overflow: hidden;
            background: #fff;
        }

        .period-toggle button {
            border: none;
            background: transparent;
            padding: 0.375rem 0.875rem;
            font-size: 0.8125rem;
            color: #495057;
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .period-toggle button:not(:last-child) {
            border-right: 1px solid #e3e6ec;
        }

        .period-toggle button:hover {
            background: #f8f9fa;
            color: #0066cc;
        }

        .period-toggle button.active {
            background: #0066cc;
            color: #fff;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
        }

        .empty-state i {
            color: #dee2e6;
            margin-bottom: 1rem;
        }

        .empty-state h6 {
            color: #6c757d;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #adb5bd;
            font-size: 0.875rem;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .admin-content {
                padding: 0.875rem;
            }

            .admin-header h1 {
                font-size: 1.25rem;
            }

            .quick-actions-grid {
                grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
                gap: 0.75rem;
            }

            .kpi-card .kpi-value {
                font-size: 1.5rem;
            }

            .chart-container {
                height: 250px;
            }
        }

        @@media (max-width: 576px) {
            .admin-content {
                padding: 0.75rem;
            }

            .admin-header {
                padding: 0.875rem;
                margin-bottom: 0.875rem;
            }

            .kpi-card {
