@model JohnHenryFashionWeb.ViewModels.AdminBlogViewModel
@{
    ViewData["Title"] = "Quản lý Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Quản lý Blog</h1>
            <p class="text-muted">Tạo và quản lý các bài viết blog</p>
        </div>
        <div>
            <a href="@Url.Action("CreateBlogPost", "Admin")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tạo bài viết mới
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Tìm theo tiêu đề, nội dung...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="draft" selected="@(Model.StatusFilter == "draft" ? "selected" : null)">Bản nháp</option>
                        <option value="published" selected="@(Model.StatusFilter == "published" ? "selected" : null)">Đã xuất bản</option>
                        <option value="archived" selected="@(Model.StatusFilter == "archived" ? "selected" : null)">Lưu trữ</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Danh mục</label>
                    <select name="category" class="form-select">
                        <option value="">Tất cả danh mục</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" selected="@(Model.CategoryFilter == category.Id.ToString() ? "selected" : null)">
                                @category.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="fas fa-search"></i> Lọc
                    </button>
                    <a href="@Url.Action("Blog", "Admin")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Xóa
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                Danh sách bài viết (@Model.TotalPosts bài viết)
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Posts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Danh mục</th>
                                <th>Trạng thái</th>
                                <th>Tác giả</th>
                                <th>Ngày tạo</th>
                                <th>Lượt xem</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in Model.Posts)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                        {
                                            <img src="@post.FeaturedImageUrl" alt="@post.Title" class="img-thumbnail" style="width: 60px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 40px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@post.Title</strong>
                                            @if (post.IsFeatured)
                                            {
                                                <span class="badge bg-warning text-dark ms-1">Nổi bật</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(post.Excerpt))
                                        {
                                            <small class="text-muted">@(post.Excerpt.Length > 60 ? post.Excerpt.Substring(0, 60) + "..." : post.Excerpt)</small>
                                        }
                                    </td>
                                    <td>
                                        @if (post.Category != null)
                                        {
                                            <span class="badge bg-info">@post.Category.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (post.Status)
                                        {
                                            case "published":
                                                <span class="badge bg-success">Đã xuất bản</span>
                                                break;
                                            case "draft":
                                                <span class="badge bg-secondary">Bản nháp</span>
                                                break;
                                            case "archived":
                                                <span class="badge bg-dark">Lưu trữ</span>
                                                break;
                                            default:
                                                <span class="badge bg-light text-dark">@post.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (post.Author != null)
                                        {
                                            @post.Author.FirstName @post.Author.LastName
                                        }
                                    </td>
                                    <td>
                                        <div>@post.CreatedAt.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@post.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">@post.ViewCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="btn btn-sm btn-outline-info" title="Xem bài viết" target="_blank">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("EditBlogPost", "Admin", new { id = post.Id })" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Xóa" 
                                                    onclick="deletePost('@post.Id', '@post.Title')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Blog pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Blog", new { 
                                        page = Model.CurrentPage - 1, 
                                        status = Model.StatusFilter, 
                                        category = Model.CategoryFilter, 
                                        search = Model.SearchTerm 
                                    })">Trước</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Blog", new { 
                                        page = i, 
                                        status = Model.StatusFilter, 
                                        category = Model.CategoryFilter, 
                                        search = Model.SearchTerm 
                                    })">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Blog", new { 
                                        page = Model.CurrentPage + 1, 
                                        status = Model.StatusFilter, 
                                        category = Model.CategoryFilter, 
                                        search = Model.SearchTerm 
                                    })">Tiếp</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Không có bài viết nào</h5>
                    <p class="text-muted">Hãy tạo bài viết đầu tiên của bạn!</p>
                    <a href="@Url.Action("CreateBlogPost", "Admin")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tạo bài viết mới
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deletePost(postId, postTitle) {
            if (confirm(`Bạn có chắc chắn muốn xóa bài viết "${postTitle}"?`)) {
                fetch(`/admin/blog/delete/${postId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra khi xóa bài viết');
                    }
                })
                .catch(error => {
                    alert('Có lỗi xảy ra khi xóa bài viết');
                    console.error('Error:', error);
                });
            }
        }
    </script>
}
