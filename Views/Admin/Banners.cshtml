<!-- Create Banner Modal -->
<div class="modal fade" id="createBannerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo banner mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createBannerForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="admin-form-group">
                                <label for="bannerTitle" class="admin-label">Tiêu đề banner <span class="text-danger">*</span></label>
                                <input type="text" class="admin-input" id="bannerTitle" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="admin-form-group">
                                <label for="bannerPosition" class="admin-label">Vị trí hiển thị <span class="text-danger">*</span></label>
                                <select class="admin-input" id="bannerPosition" required>
                                    <option value="">Chọn vị trí</option>
                                    <option value="main">Trang chủ chính</option>
                                    <option value="secondary">Banner phụ</option>
                                    <option value="sidebar">Sidebar</option>
                                    <option value="footer">Footer</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="admin-form-group">
                        <label for="bannerImage" class="admin-label">Hình ảnh banner <span class="text-danger">*</span></label>
                        <input type="file" class="admin-input" id="bannerImage" accept="image/*" required>
                        <small class="admin-form-help">Khuyến nghị: 1200x400px cho banner chính, 600x300px cho banner phụ</small>
                    </div>

                    <div class="admin-form-group">
                        <label for="bannerUrl" class="admin-label">URL liên kết</label>
                        <input type="url" class="admin-input" id="bannerUrl" placeholder="https://example.com">
                    </div>

                    <div class="admin-form-group">
                        <label for="bannerAlt" class="admin-label">Alt text</label>
                        <input type="text" class="admin-input" id="bannerAlt" placeholder="Mô tả hình ảnh">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="admin-form-group">
                                <label for="startDate" class="admin-label">Ngày bắt đầu</label>
                                <input type="datetime-local" class="admin-input" id="startDate">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="admin-form-group">
                                <label for="endDate" class="admin-label">Ngày kết thúc</label>
                                <input type="datetime-local" class="admin-input" id="endDate">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
