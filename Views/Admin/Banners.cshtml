    </div>
</div>

<script>
    function addBanner(position) {
        document.getElementById('bannerPosition').value = position;
        bootstrap.Modal.getOrCreateInstance(document.getElementById('createBannerModal')).show();
    }

    function editBanner(bannerId) {
        // Implementation for editing banner
        window.location.href = `/admin/banners/${bannerId}/edit`;
    }

    function removeBanner(position) {
        if (confirm('Bạn có chắc chắn muốn gỡ banner này?')) {
            fetch(`/admin/api/banners/position/${position}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + data.message);
                }
            });
        }
    }

    function toggleBanner(bannerId) {
        fetch(`/admin/api/banners/${bannerId}/toggle`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Có lỗi xảy ra: ' + data.message);
            }
        });
    }

    function scheduleNow(bannerId) {
        if (confirm('Bạn có muốn kích hoạt banner này ngay bây giờ?')) {
            fetch(`/admin/api/banners/${bannerId}/activate`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra: ' + data.message);
                }
            });
        }
    }

    function createBanner() {
        const formData = new FormData(document.getElementById('createBannerForm'));
        
        fetch('/admin/api/banners', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Banner đã được tạo thành công!');
                bootstrap.Modal.getInstance(document.getElementById('createBannerModal')).hide();
                location.reload();
            } else {
                alert('Có lỗi xảy ra: ' + data.message);
            }
        });
    }

    // Image preview functionality
    document.getElementById('bannerImage').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('previewImg').src = e.target.result;
                document.getElementById('imagePreview').style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });

    // Set default start date to now
    document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        document.getElementById('startDate').value = now.toISOString().slice(0, 16);
    });
</script>

