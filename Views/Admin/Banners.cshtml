<!-- Create Banner Modal -->
<div class="modal fade" id="createBannerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo banner mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createBannerForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="bannerTitle" class="form-label">Tiêu đề banner <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="bannerTitle" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="bannerPosition" class="form-label">Vị trí hiển thị <span class="text-danger">*</span></label>
                                <select class="form-select" id="bannerPosition" required>
                                    <option value="">Chọn vị trí</option>
                                    <option value="main">Trang chủ chính</option>
                                    <option value="secondary">Banner phụ</option>
                                    <option value="sidebar">Sidebar</option>
                                    <option value="footer">Footer</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="bannerImage" class="form-label">Hình ảnh banner <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="bannerImage" accept="image/*" required>
                        <div class="form-text">Khuyến nghị: 1200x400px cho banner chính, 600x300px cho banner phụ</div>
                    </div>

                    <div class="mb-3">
                        <label for="bannerUrl" class="form-label">URL liên kết</label>
                        <input type="url" class="form-control" id="bannerUrl" placeholder="https://example.com">
                    </div>

                    <div class="mb-3">
                        <label for="bannerAlt" class="form-label">Alt text</label>
                        <input type="text" class="form-control" id="bannerAlt" placeholder="Mô tả hình ảnh">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="startDate" class="form-label">Ngày bắt đầu</label>
