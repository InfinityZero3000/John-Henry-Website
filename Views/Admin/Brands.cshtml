@model List<Brand>
@{
    ViewData["Title"] = "Quản lý Thương hiệu";
    ViewData["CurrentSection"] = "brands";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <!-- Header Section -->
    <div class="admin-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-tags me-2"></i>Quản lý Thương hiệu
                </h1>
                <p class="text-muted mb-0">Quản lý các thương hiệu sản phẩm</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("CreateBrand")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Thêm Thương hiệu
                </a>
            </div>
        </div>
    </div>

    <!-- Search and Actions Section -->
    <div class="content-wrapper">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="search-container">
                    <form method="get" class="search-form">
                        <div class="input-group">
                            <input type="text" name="search" value="@ViewBag.Search" 
                                   placeholder="Tìm kiếm thương hiệu..." class="form-control">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" name="page" value="1">
                    </form>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <div class="info-stats">
                    <span class="badge bg-secondary me-2">
                        Tổng: @ViewBag.TotalBrands thương hiệu
                    </span>
                    <span class="badge bg-info">
                        Trang @ViewBag.CurrentPage/@ViewBag.TotalPages
                    </span>
                </div>
            </div>
        </div>
        <!-- Brands Table -->
        <div class="table-container">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Logo</th>
                                    <th>Tên thương hiệu</th>
                                    <th>Mô tả</th>
                                    <th>Website</th>
                                    <th>Số sản phẩm</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                {
                                    <img src="@brand.LogoUrl" alt="@brand.Name" 
                                         class="brand-logo rounded" style="width: 50px; height: 50px; object-fit: contain;">
                                }
                                else
                                {
                                    <div class="brand-logo-placeholder rounded d-flex align-items-center justify-content-center bg-light" 
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@brand.Name</strong>
                                <br>
                                <small class="text-muted">@brand.Slug</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(brand.Description))
                                {
                                    @(brand.Description.Length > 100 ? brand.Description.Substring(0, 100) + "..." : brand.Description)
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có mô tả</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(brand.Website))
                                {
                                    <a href="@brand.Website" target="_blank" class="text-primary text-decoration-none">
                                        <i class="fas fa-external-link-alt me-1"></i>
                                        Website
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    @(brand.Products?.Count ?? 0) sản phẩm
                                </span>
                            </td>
                            <td>
                                @if (brand.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tạm dừng</span>
                                }
                            </td>
                            <td>
                                @brand.CreatedAt.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("EditBrand", new { id = brand.Id })" 
                                       class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    <form method="post" action="@Url.Action("ToggleBrandStatus", new { id = brand.Id })" 
                                          style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" 
                                                class="btn btn-sm @(brand.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                title="@(brand.IsActive ? "Tạm dừng" : "Kích hoạt")"
                                                onclick="return confirm('@(brand.IsActive ? "Bạn có chắc muốn tạm dừng thương hiệu này?" : "Bạn có chắc muốn kích hoạt thương hiệu này?")')">
                                            <i class="fas @(brand.IsActive ? "fa-pause" : "fa-play")"></i>
                                        </button>
                                    </form>

                                    @if (brand.Products?.Count == 0)
                                    {
                                        <form method="post" action="@Url.Action("DeleteBrand", new { id = brand.Id })" 
                                              style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    title="Xóa"
                                                    onclick="return confirm('Bạn có chắc muốn xóa thương hiệu này? Hành động này không thể hoàn tác!')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-danger" disabled title="Không thể xóa vì có sản phẩm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <div class="empty-state">
                                <div class="empty-icon mb-3">
                                    <i class="fas fa-tags fa-3x text-muted"></i>
                                </div>
                                <h5 class="text-muted mb-3">Chưa có thương hiệu nào</h5>
                                <p class="text-muted mb-3">Bắt đầu bằng cách thêm thương hiệu đầu tiên cho cửa hàng của bạn.</p>
                                <a href="@Url.Action("CreateBrand")" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>
                                    Thêm thương hiệu đầu tiên
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Pagination">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Brands", new { page = i, search = ViewBag.Search })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 3 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 3000);
    </script>
}