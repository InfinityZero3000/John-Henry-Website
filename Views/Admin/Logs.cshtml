<script>
    const API_BASE = '/api/admin/logs';
    let autoRefreshInterval;
    let currentLogs = [];

    // Load logs on page load
    document.addEventListener('DOMContentLoaded', async function() {
        // Set default date range (last 7 days)
        const today = new Date();
        const weekAgo = new Date(today);
        weekAgo.setDate(weekAgo.getDate() - 7);
        
        document.getElementById('toDate').value = today.toISOString().split('T')[0];
        document.getElementById('fromDate').value = weekAgo.toISOString().split('T')[0];

        // Load initial logs
        await loadLogs();
        
        // Load statistics
        await loadStatistics();
    });

    async function loadLogs() {
        const level = document.getElementById('logLevel').value;
        const fromDate = document.getElementById('fromDate').value;
        const toDate = document.getElementById('toDate').value;
        
        try {
            showLoading();
            
            let url = `${API_BASE}?maxCount=500`;
            if (level && level !== 'all') url += `&level=${level}`;
            if (fromDate) url += `&fromDate=${fromDate}T00:00:00`;
            if (toDate) url += `&toDate=${toDate}T23:59:59`;
            
            const response = await fetch(url);
            if (!response.ok) throw new Error('Failed to load logs');
            
            const data = await response.json();
            currentLogs = data.logs || [];
            
            displayLogs(currentLogs);
            updateLogCount(data.count || 0);
            
        } catch (error) {
            console.error('Error loading logs:', error);
            showError('Không thể tải logs. Vui lòng thử lại.');
        }
    }

    function displayLogs(logs) {
        const tbody = document.querySelector('#logsTable tbody');
        
        if (!logs || logs.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        <i data-lucide="inbox" style="width: 48px; height: 48px; margin-bottom: 0.5rem;"></i>
                        <p>Không có log nào trong khoảng thời gian này</p>
                    </td>
                </tr>
            `;
            if (typeof lucide !== 'undefined') lucide.createIcons();
            return;
        }

        tbody.innerHTML = logs.map(log => {
            const levelBadge = getLevelBadge(log.level);
            const timestamp = new Date(log.timestamp).toLocaleString('vi-VN');
            
            return `
                <tr>
                    <td>${timestamp}</td>
                    <td>${levelBadge}</td>
                    <td>${escapeHtml(log.source)}</td>
                    <td class="log-message">${escapeHtml(log.message)}</td>
                    <td>
                        <button class="admin-btn admin-btn-sm admin-btn-secondary" onclick="viewLogDetails('${log.id}')">
                            <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                        </button>
                    </td>
                </tr>
            `;
        }).join('');
        
        if (typeof lucide !== 'undefined') lucide.createIcons();
        hideLoading();
    }

    function getLevelBadge(level) {
        const badges = {
            'INF': '<span class="admin-badge admin-badge-info">INFO</span>',
            'WRN': '<span class="admin-badge admin-badge-warning">WARNING</span>',
            'ERR': '<span class="admin-badge admin-badge-danger">ERROR</span>',
            'DBG': '<span class="admin-badge admin-badge-secondary">DEBUG</span>'
        };
        return badges[level] || `<span class="admin-badge">${level}</span>`;
    }

    async function loadStatistics() {
        try {
            const response = await fetch(`${API_BASE}/statistics`);
            if (!response.ok) return;
            
            const data = await response.json();
            const stats = data.statistics || {};
            
            // Update stats display if elements exist
            const totalEl = document.getElementById('totalLogs');
            const errorsEl = document.getElementById('errorLogs');
            const warningsEl = document.getElementById('warningLogs');
            
            if (totalEl) totalEl.textContent = stats.Total || 0;
            if (errorsEl) errorsEl.textContent = stats.Error || 0;
            if (warningsEl) warningsEl.textContent = stats.Warning || 0;
            
        } catch (error) {
            console.error('Error loading statistics:', error);
        }
    }

    async function applyFilters() {
        await loadLogs();
    }

    async function refreshLogs() {
        await loadLogs();
