@model JohnHenryFashionWeb.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Tổng quan hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Welcome Banner -->
<div class="row mb-4">
    <div class="col-12">
        <div class="admin-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <div class="admin-card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h2 class="mb-2">Chào mừng trở lại, Administrator!</h2>
                        <p class="mb-0 opacity-75">Hôm nay là @DateTime.Now.ToString("dddd, dd/MM/yyyy"). Đây là tổng quan về hoạt động kinh doanh của bạn.</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <i class="fas fa-chart-line fa-4x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Key Performance Indicators -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card success">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stats-value">@Model.Summary.TodayRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>
                    <div class="stats-label">Doanh thu hôm nay</div>
                    <div class="stats-change positive">
                        <i class="fas fa-arrow-up"></i> +12.5% so với hôm qua
                    </div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card info">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stats-value">@Model.Summary.TodayOrders</div>
                    <div class="stats-label">Đơn hàng mới</div>
                    <div class="stats-change positive">
                        <i class="fas fa-arrow-up"></i> +8.2% so với hôm qua
                    </div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card warning">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stats-value">@Model.Summary.TodayVisitors</div>
                    <div class="stats-label">Khách truy cập</div>
                    <div class="stats-change positive">
                        <i class="fas fa-arrow-up"></i> +15.3% so với hôm qua
                    </div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card danger">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stats-value">@Model.Summary.ActiveUsers</div>
                    <div class="stats-label">Người dùng hoạt động</div>
                    <div class="stats-change negative">
                        <i class="fas fa-arrow-down"></i> -2.1% so với hôm qua
                    </div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Statistics -->
<div class="row mb-4">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-chart-pulse me-2"></i>Hoạt động thời gian thực</h5>
            </div>
            <div class="admin-card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary mb-2">@Model.RealTimeData.ActiveUsers</h3>
                        <p class="mb-0 small text-muted">Người dùng trực tuyến</p>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success mb-2">@Model.RealTimeData.PageViewsLastHour</h3>
                        <p class="mb-0 small text-muted">Lượt xem trong giờ qua</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-warehouse me-2"></i>Tình trạng kho hàng</h5>
            </div>
            <div class="admin-card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Tổng sản phẩm</span>
                    <span class="fw-bold">1,234</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Sắp hết hàng</span>
                    <span class="fw-bold text-warning">23</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Hết hàng</span>
                    <span class="fw-bold text-danger">5</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-4 col-md-12 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-clock me-2"></i>Hoạt động gần đây</h5>
            </div>
            <div class="admin-card-body">
                <div class="activity-item d-flex align-items-center mb-3">
                    <div class="activity-icon bg-success text-white rounded-circle me-3">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold">Đơn hàng mới #1234</div>
                        <div class="text-muted small">2 phút trước</div>
                    </div>
                </div>
                <div class="activity-item d-flex align-items-center mb-3">
                    <div class="activity-icon bg-info text-white rounded-circle me-3">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold">Khách hàng mới đăng ký</div>
                        <div class="text-muted small">5 phút trước</div>
                    </div>
                </div>
                <div class="activity-item d-flex align-items-center">
                    <div class="activity-icon bg-warning text-white rounded-circle me-3">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold">Sản phẩm sắp hết hàng</div>
                        <div class="text-muted small">10 phút trước</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Analytics -->
<div class="row mb-4">
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="admin-card">
            <div class="admin-card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-chart-area me-2"></i>Biểu đồ doanh thu</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="revenueChart" id="revenue7days" checked>
                    <label class="btn btn-outline-primary" for="revenue7days">7 ngày</label>
                    
                    <input type="radio" class="btn-check" name="revenueChart" id="revenue30days">
                    <label class="btn btn-outline-primary" for="revenue30days">30 ngày</label>
                    
                    <input type="radio" class="btn-check" name="revenueChart" id="revenue12months">
                    <label class="btn btn-outline-primary" for="revenue12months">12 tháng</label>
                </div>
            </div>
            <div class="admin-card-body">
                <canvas id="revenueChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-xl-4 col-lg-5 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-chart-pie me-2"></i>Phân bố đơn hàng</h5>
            </div>
            <div class="admin-card-body">
                <canvas id="ordersChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Performance Metrics -->
<div class="row mb-4">
    <div class="col-xl-6 col-lg-6 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-tachometer-alt me-2"></i>Hiệu suất hệ thống</h5>
            </div>
            <div class="admin-card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <h4 class="text-info mb-2">@Model.PerformanceMetrics.AverageApiResponseTime.TotalMilliseconds.ToString("F1")ms</h4>
                            <p class="mb-0 text-muted">Thời gian phản hồi trung bình</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <h4 class="text-warning mb-2">@Model.PerformanceMetrics.ErrorRate.ToString("F2")%</h4>
                            <p class="mb-0 text-muted">Tỷ lệ lỗi</p>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <h5 class="text-success mb-2">99.8%</h5>
                            <p class="mb-0 text-muted small">Thời gian hoạt động</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <h5 class="text-info mb-2">2.3GB</h5>
                            <p class="mb-0 text-muted small">Bộ nhớ sử dụng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-6 col-lg-6 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-trophy me-2"></i>Sản phẩm bán chạy</h5>
            </div>
            <div class="admin-card-body">
                <canvas id="topProductsChart" height="250"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders and Latest Activities -->
<div class="row mb-4">
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="admin-card">
            <div class="admin-card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-receipt me-2"></i>Đơn hàng gần đây</h5>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-external-link-alt me-1"></i>Xem tất cả
                </a>
            </div>
            <div class="admin-card-body p-0">
                <div class="admin-table">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thời gian</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 6; i++)
                            {
                                var orderNumber = $"JH{DateTime.Now.Year}{(1000 + i)}";
                                var customerName = new[] { "Nguyễn Văn A", "Trần Thị B", "Lê Văn C", "Phạm Thị D", "Hoàng Văn E", "Vũ Thị F" }[i-1];
                                var amount = new[] { 1250000, 890000, 2150000, 450000, 1800000, 3200000 }[i-1];
                                var status = new[] { "pending", "processing", "completed", "cancelled", "shipped", "processing" }[i-1];
                                var statusText = new[] { "Chờ xử lý", "Đang xử lý", "Hoàn thành", "Đã hủy", "Đang giao", "Đang xử lý" }[i-1];
                                var statusClass = new[] { "warning", "info", "success", "danger", "primary", "info" }[i-1];
                                var timeAgo = new[] { "2 phút trước", "15 phút trước", "1 giờ trước", "2 giờ trước", "3 giờ trước", "5 giờ trước" }[i-1];
                                
                                <tr>
                                    <td>
                                        <span class="fw-bold text-primary">#@orderNumber</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar-sm bg-secondary text-white rounded-circle me-2">
                                                @customerName.Split(' ').Last().Substring(0, 1)
                                            </div>
                                            <span>@customerName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@amount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">@timeAgo</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="#" class="btn btn-outline-primary" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-outline-success" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-4 col-lg-5 mb-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="fas fa-bell me-2"></i>Thông báo hệ thống</h5>
            </div>
            <div class="admin-card-body">
                @for (int i = 1; i <= 5; i++)
                {
                    var notificationTypes = new[] { "success", "warning", "info", "danger", "primary" };
                    var notificationIcons = new[] { "fa-check-circle", "fa-exclamation-triangle", "fa-info-circle", "fa-times-circle", "fa-bell" };
                    var notificationTitles = new[] { 
                        "Đơn hàng mới được tạo",
                        "Sản phẩm sắp hết hàng",
                        "Khách hàng mới đăng ký",
                        "Lỗi thanh toán xảy ra",
                        "Cập nhật hệ thống hoàn tất"
                    };
                    var notificationTimes = new[] { "2 phút trước", "15 phút trước", "30 phút trước", "1 giờ trước", "2 giờ trước" };
                    
                    <div class="notification-item-admin d-flex align-items-start @(i < 5 ? "mb-3" : "")">
                        <div class="notification-icon-admin bg-@notificationTypes[i-1] text-white rounded-circle me-3">
                            <i class="fas @notificationIcons[i-1]"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-medium mb-1">@notificationTitles[i-1]</div>
                            <div class="text-muted small">@notificationTimes[i-1]</div>
                        </div>
                    </div>
                }
                <div class="text-center mt-3">
                    <a href="@Url.Action("Notifications", "Admin")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-bell me-1"></i>Xem tất cả thông báo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Panel -->
