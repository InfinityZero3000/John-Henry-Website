                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-3">
                        <a href="@Url.Action("Settings", "Admin")" class="quick-action-card text-decoration-none">
                            <div class="text-center p-3 border rounded hover-shadow">
                                <i class="fas fa-cog fa-2x text-secondary mb-2"></i>
                                <div class="fw-medium">Cài đặt</div>
                            </div>
