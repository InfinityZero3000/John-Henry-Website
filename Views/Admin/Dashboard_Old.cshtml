                        <a href="@Url.Action("Users", "Admin")" class="quick-action-card text-decoration-none">
                            <div class="text-center p-3 border rounded hover-shadow">
                                <i class="fas fa-users fa-2x text-info mb-2"></i>
                                <div class="fw-medium">Quản lý khách hàng</div>
                            </div>
                        </a>
                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-3">
                        <a href="@Url.Action("Reports", "Admin")" class="quick-action-card text-decoration-none">
                            <div class="text-center p-3 border rounded hover-shadow">
                                <i class="fas fa-chart-bar fa-2x text-warning mb-2"></i>
                                <div class="fw-medium">Báo cáo</div>
                            </div>
