@model JohnHenryFashionWeb.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block user-sidebar">
            <div class="sidebar-content">
                <div class="text-center mb-3">
                    <div class="user-avatar">
                        <img src="@Model.Avatar" alt="Avatar" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;" 
                             onerror="this.onerror=null; this.style.display='none'; var icon = document.createElement('i'); icon.setAttribute('data-lucide', 'user-circle'); icon.style.cssText = 'width: 60px; height: 60px; color: #6c757d;'; this.parentElement.appendChild(icon); if(typeof lucide !== 'undefined') lucide.createIcons();">
                    </div>
                    <h5 class="mt-2">@Model.FullName</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Profile", "UserDashboard")">
                            <i data-lucide="user" class="me-2"></i>
                            Hồ sơ 
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Orders", "UserDashboard")">
                            <i data-lucide="shopping-bag" class="me-2"></i>
                            Đơn hàng 
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Wishlist">
                            <i data-lucide="heart" class="me-2"></i>
                            Yêu thích
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ChangePassword", "Account")">
                            <i data-lucide="lock" class="me-2"></i>
                            Đổi mật khẩu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Notifications", "UserDashboard")">
                            <i data-lucide="bell" class="me-2"></i>
                            Thông báo
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-action="Logout" asp-controller="Account" method="post" style="display: inline; width: 100%;">
                            <button type="submit" class="nav-link w-100 text-start" style="background: none; border: none; color: #000000;">
                                <i data-lucide="log-out" class="me-2"></i>
                                Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Hồ sơ cá nhân</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="@Url.Action("Index", "UserDashboard")" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-user me-2"></i>
                                Thông tin cá nhân
                            </h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="Profile" method="post" enctype="multipart/form-data">
                                <input asp-for="Id" type="hidden" />
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FirstName" class="form-label"></label>
                                            <input asp-for="FirstName" class="form-control" placeholder="Nhập họ của bạn" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="LastName" class="form-label"></label>
                                            <input asp-for="LastName" class="form-control" placeholder="Nhập tên của bạn" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" readonly />
                                    <div class="form-text">Email không thể thay đổi</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DateOfBirth" class="form-label"></label>
                                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Gender" class="form-label"></label>
                                            <select asp-for="Gender" class="form-select">
                                                <option value="">-- Chọn giới tính --</option>
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                                <option value="Khác">Khác</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>
                                        Cập nhật thông tin
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-image me-2"></i>
                                Ảnh đại diện
                            </h6>
                        </div>
                        <div class="card-body text-center">
                            <div class="avatar-preview mb-3">
                                <img src="@Model.Avatar" alt="Avatar" class="rounded-circle img-thumbnail" 
                                     style="width: 150px; height: 150px; object-fit: cover;"
                                     onerror="this.onerror=null; this.style.display='none'; var icon = document.createElement('i'); icon.setAttribute('data-lucide', 'user-circle'); icon.style.cssText = 'width: 150px; height: 150px; color: #6c757d;'; this.parentElement.appendChild(icon); if(typeof lucide !== 'undefined') lucide.createIcons();">
                            </div>
                            
                            <form asp-action="UpdateAvatar" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input type="file" class="form-control" name="avatarFile" accept="image/*" id="avatarFile">
                                </div>
                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-upload me-1"></i>
                                    Cập nhật ảnh
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card shadow mt-3">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-shield-alt me-2"></i>
                                Bảo mật
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action">
                                    <i class="fas fa-lock me-2"></i>
                                    Đổi mật khẩu
                                </a>
                                <a href="@Url.Action("TwoFactorAuthentication", "Account")" class="list-group-item list-group-item-action">
                                    <i class="fas fa-mobile-alt me-2"></i>
                                    Xác thực 2 bước
                                </a>
                                <a href="@Url.Action("LoginHistory", "Account")" class="list-group-item list-group-item-action">
                                    <i class="fas fa-history me-2"></i>
                                    Lịch sử đăng nhập
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
/* Container and Layout Fixes */
.container-fluid {
    padding: 0;
}

.row {
    margin: 0;
    display: flex;
}

/* Sidebar - Optimized shorter layout */
.user-sidebar {
    background: #ffffff !important;
    border-right: 1px solid #dee2e6;
    min-height: auto;
    max-height: 80vh;
    position: relative !important;
    padding: 0 !important;
    z-index: 1;
}

.sidebar-content {
    padding: 15px 10px;
    height: auto;
    max-height: 80vh;
    overflow-y: auto;
}

/* Main content area */
main.col-md-9 {
    margin-left: 0 !important;
    padding: 20px;
    flex: 1;
    min-height: 100vh;
    background: #ffffff;
}

/* Navigation styles */
.user-sidebar .nav-link {
    font-weight: 500;
    color: #333;
    padding: 10px 12px;
    border-radius: 6px;
    margin-bottom: 3px;
    transition: all 0.2s;
    font-size: 0.9rem;
}

.user-sidebar .nav-link:hover {
    color: #333;
    background-color: #f8f9fa;
    text-decoration: none;
}

.user-sidebar .nav-link.active {
    color: #333;
    background-color: #e9ecef;
    font-weight: 600;
}

.user-sidebar .nav-link i {
    width: 18px;
    height: 18px;
    text-align: center;
}

/* Lucide icons styling */
.user-sidebar i[data-lucide] {
    width: 18px;
    height: 18px;
    stroke-width: 1.5;
}

/* Avatar and user info - Compact */
.user-avatar {
    margin-bottom: 10px;
}

.text-center h5 {
    margin-bottom: 3px;
    font-weight: 600;
    font-size: 1rem;
}

.text-center .text-muted {
    margin-bottom: 15px;
}

/* Form and button styling */
.user-sidebar form {
    width: 100%;
}

.user-sidebar button.nav-link {
    width: 100%;
    text-align: left;
    border: none;
    background: none;
    color: #000000 !important;
}

.user-sidebar button.nav-link:hover {
    background-color: rgba(220, 53, 69, 0.1) !important;
    color: #000000 !important;
}

/* Shadow utility */
.shadow {
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.avatar-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 150px;
}

/* Mobile Responsive */
@@media (max-width: 767.98px) {
    .row {
        flex-direction: column;
    }
    
    .user-sidebar {
        min-height: auto;
        max-height: 60vh;
        order: 2;
    }
    
    main.col-md-9 {
        order: 1;
        min-height: auto;
        margin-bottom: 0;
    }
    
    .sidebar-content {
        padding: 10px 8px;
    }
}

/* Ensure footer is never covered */
body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.container-fluid {
    flex: 1;
}

footer {
    margin-top: auto;
    z-index: 999 !important;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Preview avatar before upload
        document.getElementById('avatarFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.querySelector('.avatar-preview');
                    preview.innerHTML = `<img src="${e.target.result}" alt="Avatar Preview" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">`;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}