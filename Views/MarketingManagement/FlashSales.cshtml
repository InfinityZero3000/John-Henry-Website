@model List<JohnHenryFashionWeb.Models.FlashSale>
@{
    ViewData["Title"] = "Flash Sales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .marketing-container {
        padding: 2rem;
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        min-height: calc(100vh - 80px);
    }

    .page-header-glass, .sale-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .sale-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    .btn-primary-glass {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 10px;
    }
</style>

<div class="marketing-container">
    <div class="page-header-glass">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">⚡ Flash Sales</h2>
                <p class="text-muted mb-0">Quản lý chương trình Flash Sale</p>
            </div>
            <a href="/admin/marketing/flashsale/create" class="btn btn-primary-glass">
                <i class="fas fa-plus"></i> Tạo Flash Sale
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="sale-card text-center">
            <p class="text-muted mb-0">Chưa có flash sale nào.</p>
        </div>
    }
    else
    {
        @foreach (var sale in Model)
        {
            <div class="sale-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <h5 class="mb-0">@sale.Name</h5>
                            @if (sale.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                        <p class="text-muted mb-2">@sale.Description</p>
                        <div class="d-flex gap-3">
                            <span class="badge bg-danger">-@sale.DiscountPercentage%</span>
                            <span><strong>Stock:</strong> @sale.SoldCount / @sale.StockLimit</span>
                            <span><i class="fas fa-calendar"></i> @sale.StartDate.ToString("dd/MM HH:mm") - @sale.EndDate.ToString("dd/MM HH:mm")</span>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="/admin/marketing/flashsale/@sale.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form method="post" action="/admin/marketing/flashsale/@sale.Id/delete" style="display:inline;" onsubmit="return confirm('Delete?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
