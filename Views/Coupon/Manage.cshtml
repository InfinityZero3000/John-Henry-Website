@using JohnHenryFashionWeb.Models
@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Quản lý mã giảm giá";
    ViewData["CurrentSection"] = "Coupons";
    ViewData["PageIcon"] = "ticket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var search = ViewBag.Search as string;
    var totalCount = Model.Count();
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-page-header-content">
            <h1 class="admin-page-title">
                <i data-lucide="ticket"></i>
                Quản lý mã giảm giá
            </h1>
            <p class="admin-page-subtitle">Tạo và quản lý mã giảm giá cho cửa hàng</p>
        </div>
        <div class="admin-page-header-actions">
            <a href="/Coupon/Create" class="admin-btn admin-btn-primary">
                <i data-lucide="plus"></i>
                Tạo mã giảm giá
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="admin-card mb-4">
        <div class="admin-card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="admin-search-box">
                        <i data-lucide="search" class="search-icon"></i>
                        <input type="text" name="search" value="@search" class="admin-input"
                               placeholder="Tìm kiếm theo mã, tiêu đề hoặc mô tả...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="admin-btn admin-btn-primary w-100" type="submit">
                        <i data-lucide="search"></i>
                        Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Coupons Table -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h5 class="admin-card-title">Danh sách mã giảm giá (@totalCount)</h5>
            @if (!string.IsNullOrEmpty(search))
            {
                <a href="/Coupon/Manage" class="admin-btn admin-btn-sm admin-btn-secondary">
                    <i data-lucide="x"></i>
                    Xóa bộ lọc
                </a>
            }
        </div>
        <div class="admin-card-body">
            @if (Model.Any())
            {
                <div class="admin-table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tiêu đề</th>
                                <th>Loại giảm giá</th>
                                <th>Giá trị</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                                <th>Lượt sử dụng</th>
                                <th style="width: 180px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coupon in Model)
                            {
                                <tr>
                                    <td>
                                        <code class="admin-code">@coupon.Code</code>
                                    </td>
                                    <td>
                                        <div><strong>@coupon.Name</strong></div>
                                        @if (!string.IsNullOrEmpty(coupon.Description))
                                        {
                                            <small class="text-muted">@coupon.Description</small>
                                        }
                                    </td>
                                    <td>
                                        @if (coupon.Type == "percentage")
                                        {
                                            <span class="admin-badge admin-badge-success">Phần trăm</span>
                                        }
                                        else
                                        {
                                            <span class="admin-badge admin-badge-warning">Số tiền</span>
                                        }
                                    </td>
                                    <td>
                                        @if (coupon.Type == "percentage")
                                        {
                                            <strong>@coupon.Value%</strong>
                                        }
                                        else
                                        {
                                            <strong>@coupon.Value.ToString("N0") VNĐ</strong>
                                        }
                                        
                                        @if (coupon.MinOrderAmount.HasValue)
                                        {
                                            <br><small class="text-muted">Tối thiểu: @coupon.MinOrderAmount.Value.ToString("N0") VNĐ</small>
                                        }
                                    </td>
                                    <td>
                                        <div style="font-size: 0.875rem;">
                                            @if (coupon.StartDate.HasValue)
                                            {
                                                <div><strong>Từ:</strong> @coupon.StartDate.Value.ToString("dd/MM/yyyy")</div>
                                            }
                                            @if (coupon.EndDate.HasValue)
                                            {
                                                <div><strong>Đến:</strong> @coupon.EndDate.Value.ToString("dd/MM/yyyy")</div>
                                            }
                                            else
                                            {
                                                <div class="text-muted">Không giới hạn</div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (coupon.IsActive)
                                        {
                                            @if (coupon.EndDate.HasValue && coupon.EndDate.Value < DateTime.UtcNow)
                                            {
                                                <span class="admin-badge admin-badge-secondary">Hết hạn</span>
                                            }
                                            else if (coupon.StartDate > DateTime.UtcNow)
                                            {
                                                <span class="admin-badge admin-badge-warning">Sắp diễn ra</span>
                                            }
                                            else
                                            {
                                                <span class="admin-badge admin-badge-success">Hoạt động</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="admin-badge admin-badge-danger">Vô hiệu</span>
                                        }
                                    </td>
                                    <td>
                                        <div style="font-size: 0.875rem;">
                                            <div><strong>@coupon.UsageCount</strong> lần</div>
                                            @if (coupon.UsageLimit.HasValue)
                                            {
                                                <small class="text-muted">Giới hạn: @coupon.UsageLimit</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">Không giới hạn</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="admin-action-buttons">
                                            <a href="/Coupon/Details/@coupon.Id" class="admin-btn admin-btn-sm admin-btn-info" title="Chi tiết">
                                                <i data-lucide="eye"></i>
                                            </a>
                                            <a href="/Coupon/Edit/@coupon.Id" class="admin-btn admin-btn-sm admin-btn-primary" title="Sửa">
                                                <i data-lucide="edit"></i>
                                            </a>
                                            <button type="button" class="admin-btn admin-btn-sm @(coupon.IsActive ? "admin-btn-warning" : "admin-btn-success")" 
                                                    onclick="toggleStatus('@coupon.Id')" title="@(coupon.IsActive ? "Tạm dừng" : "Kích hoạt")">
                                                <i data-lucide="@(coupon.IsActive ? "pause" : "play")"></i>
                                            </button>
                                            <button type="button" class="admin-btn admin-btn-sm admin-btn-danger" 
                                                    onclick="deleteCoupon('@coupon.Id')" title="Xóa">
                                                <i data-lucide="trash-2"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="admin-pagination mt-4">
                        @if (currentPage > 1)
                        {
                            <a href="?page=@(currentPage - 1)@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")" 
                               class="admin-pagination-btn">
                                <i data-lucide="chevron-left"></i>
                                Trước
                            </a>
                        }
                        else
                        {
                            <button class="admin-pagination-btn" disabled>
                                <i data-lucide="chevron-left"></i>
                                Trước
                            </button>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <a href="?page=@i@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")" 
                               class="admin-pagination-btn @(i == currentPage ? "active" : "")">
                                @i
                            </a>
                        }

                        @if (currentPage < totalPages)
                        {
                            <a href="?page=@(currentPage + 1)@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")" 
                               class="admin-pagination-btn">
                                Sau
                                <i data-lucide="chevron-right"></i>
                            </a>
                        }
                        else
                        {
                            <button class="admin-pagination-btn" disabled>
                                Sau
                                <i data-lucide="chevron-right"></i>
                            </button>
                        }
                    </div>

                    <div class="text-center mt-3" style="color: var(--admin-text-light); font-size: 0.875rem;">
                        Trang @currentPage / @totalPages
                    </div>
                }
            }
            else
            {
                <div class="admin-empty-state">
                    <i data-lucide="ticket" style="width: 64px; height: 64px;"></i>
                    <h5>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <span>Không tìm thấy mã giảm giá nào</span>
                        }
                        else
                        {
                            <span>Chưa có mã giảm giá nào</span>
                        }
                    </h5>
                    <p>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <span>Thử thay đổi từ khóa tìm kiếm của bạn</span>
                        }
                        else
                        {
                            <span>Tạo mã giảm giá đầu tiên để bắt đầu!</span>
                        }
                    </p>
                    <a href="/Coupon/Create" class="admin-btn admin-btn-primary">
                        <i data-lucide="plus"></i>
                        Tạo mã giảm giá
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });

        function toggleStatus(couponId) {
            if (confirm('Bạn có chắc muốn thay đổi trạng thái mã giảm giá này?')) {
                fetch('/Coupon/ToggleStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: couponId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message || 'Cập nhật trạng thái thành công!');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('error', data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('error', 'Có lỗi xảy ra khi thay đổi trạng thái');
                });
            }
        }

        function deleteCoupon(couponId) {
            if (confirm('Bạn có chắc muốn xóa mã giảm giá này?\n\nLưu ý: Nếu mã đã được sử dụng, nó sẽ chỉ được vô hiệu hóa thay vì xóa hoàn toàn.')) {
                fetch('/Coupon/Delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: couponId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert('success', data.message || 'Xóa mã giảm giá thành công!');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('error', data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('error', 'Có lỗi xảy ra khi xóa mã giảm giá');
                });
            }
        }

        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `admin-alert admin-alert-${type === 'success' ? 'success' : 'danger'}`;
            alertDiv.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                <i data-lucide="${type === 'success' ? 'check-circle' : 'alert-circle'}"></i>
                <span>${message}</span>
            `;
            document.body.appendChild(alertDiv);
            
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
}
