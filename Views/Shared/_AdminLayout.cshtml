<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - John Henry Admin</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            z-index: 1000;
            overflow-y: auto;
            transition: all 0.3s ease;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }
        
        .admin-sidebar .logo {
            padding: 25px 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .admin-sidebar .logo h4 {
            color: white;
            margin: 0;
            font-weight: bold;
            font-size: 20px;
        }
        
        .admin-sidebar .logo small {
            color: rgba(255,255,255,0.8);
            font-size: 12px;
        }
        
        .nav-menu {
            padding: 10px 0;
        }
        
        .nav-group {
            margin: 25px 0 15px 0;
        }
        
        .nav-group-title {
            padding: 8px 25px;
            font-size: 11px;
            text-transform: uppercase;
            color: rgba(255,255,255,0.6);
            font-weight: 600;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }
        
        .nav-item {
            margin: 2px 15px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .nav-item:hover {
            background-color: rgba(255,255,255,0.1);
        }
        
        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            text-decoration: none !important;
            padding: 12px 15px;
            display: flex;
            align-items: center;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 14px;
        }
        
        .nav-link:hover {
            color: white !important;
            background-color: rgba(255,255,255,0.1);
        }
        
        .nav-link.active {
            background-color: rgba(255,255,255,0.2) !important;
            color: white !important;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        
        .nav-link i {
            margin-right: 12px;
            width: 18px;
            text-align: center;
            font-size: 16px;
        }
        
        .admin-content {
            margin-left: 260px;
            min-height: 100vh;
            padding: 25px;
            background-color: #f8f9fa;
        }
        
        .admin-header {
            background: white;
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            margin-bottom: 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 4px solid #667eea;
        }
        
        .admin-header h1 {
            margin: 0;
            color: #2c3e50;
            font-size: 26px;
            font-weight: 600;
        }
        
        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .user-info .dropdown-toggle {
            border: none;
            background: #f8f9fa;
            color: #495057;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }
        
        .user-info .dropdown-toggle:hover {
            background: #e9ecef;
        }
        
        .sidebar-divider {
            height: 1px;
            background: rgba(255,255,255,0.1);
            margin: 15px 20px;
        }
        
        @@media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
            }
            
            .admin-sidebar.show {
                transform: translateX(0);
            }
            
            .admin-content {
                margin-left: 0;
                padding: 15px;
            }
            
            .admin-header {
                padding: 15px 20px;
            }
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Admin Sidebar -->
    <div class="admin-sidebar">
        <div class="logo">
            <h4><i class="fas fa-gem"></i> John Henry</h4>
            <small>Admin Panel</small>
        </div>
        
        <div class="nav-menu">
            <!-- Dashboard -->
            <div class="nav-group">
                <div class="nav-group-title">Dashboard</div>
                <div class="nav-item">
                    <a href="/Admin/Dashboard" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Tổng quan</span>
                    </a>
                </div>
            </div>
            
            <!-- Quản lý sản phẩm -->
            <div class="nav-group">
                <div class="nav-group-title">Sản phẩm</div>
                <div class="nav-item">
                    <a href="/Admin/Products" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")">
                        <i class="fas fa-box"></i>
                        <span>Danh sách sản phẩm</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/CreateProduct" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "CreateProduct" ? "active" : "")">
                        <i class="fas fa-plus-circle"></i>
                        <span>Thêm sản phẩm</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Categories" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Categories" ? "active" : "")">
                        <i class="fas fa-tags"></i>
                        <span>Danh mục</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Brands" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Brands" || ViewContext.RouteData.Values["action"]?.ToString() == "CreateBrand" || ViewContext.RouteData.Values["action"]?.ToString() == "EditBrand" ? "active" : "")">
                        <i class="fas fa-award"></i>
                        <span>Thương hiệu</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Inventory" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Inventory" ? "active" : "")">
                        <i class="fas fa-warehouse"></i>
                        <span>Kho hàng</span>
                    </a>
                </div>
            </div>
            
            <!-- Quản lý đơn hàng -->
            <div class="nav-group">
                <div class="nav-group-title">Đơn hàng</div>
                <div class="nav-item">
                    <a href="/Admin/Orders" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Orders" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>
                </div>
            </div>
            
            <!-- Quản lý người dùng -->
            <div class="nav-group">
                <div class="nav-group-title">Người dùng</div>
                <div class="nav-item">
                    <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i>
                        <span>Khách hàng</span>
                    </a>
                </div>
            </div>
            
            <!-- Báo cáo -->
            <div class="nav-group">
                <div class="nav-group-title">Báo cáo</div>
                <div class="nav-item">
                    <a href="/Admin/Reports" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">
                        <i class="fas fa-chart-bar"></i>
                        <span>Báo cáo</span>
                    </a>
                </div>
            </div>
            
            <div class="sidebar-divider"></div>
            
            <!-- Cài đặt -->
            <div class="nav-group">
                <div class="nav-group-title">Hệ thống</div>
                <div class="nav-item">
                    <a href="/" class="nav-link" target="_blank">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Xem website</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Account/Logout" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Đăng xuất</span>
                    </a>
                </div>
            </div>
        </div>
    
    <!-- Main Content -->
    <div class="admin-content">
        <div class="admin-header">
            <h1>@ViewData["Title"]</h1>
            <div class="user-info">
                <div class="dropdown">
                    <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle fa-lg"></i>
                        <span>@User.Identity?.Name</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Account/Profile"><i class="fas fa-user"></i> Hồ sơ</a></li>
                        <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="fas fa-key"></i> Đổi mật khẩu</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
