<!DOCTYPE html>
<html lang="vi" data-theme="admin">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - John Henry Admin Panel</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <link href="~/css/dashboard.css" rel="stylesheet" />
    
    <!-- Chart.js for Analytics -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/date-fns@2.29.3/index.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
    
    <!-- DataTables for Advanced Tables -->
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    
    <style>
        .menu-item .menu-link:hover {
            background: rgba(255,255,255,0.15) !important;
            backdrop-filter: blur(20px) !important;
            transform: translateY(-1px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }
        
        .sidebar-footer a:hover {
            background: rgba(255,255,255,0.25) !important;
            backdrop-filter: blur(15px) !important;
            transform: translateY(-2px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        }
        
        .sidebar-footer button:hover {
            background: rgba(220, 53, 69, 0.3) !important;
            backdrop-filter: blur(15px) !important;
            transform: translateY(-2px);
            box-shadow: 0 8px 32px rgba(220, 53, 69, 0.2);
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-layout">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <span class="brand-text">Admin Dashboard</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i data-lucide="menu"></i>
                </button>
            </div>

            <div class="sidebar-content">

                <ul class="sidebar-menu" style="list-style: none; padding: 0;">
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Dashboard", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Dashboard" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Dashboard" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="gauge" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: rgba(255,255,255,0.6); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">QUẢN LÝ SẢN PHẨM</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Products", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Products" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Products" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="package" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Sản phẩm của tôi</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("CreateProduct", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "CreateProduct" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "CreateProduct" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="plus" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Thêm sản phẩm</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Inventory", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Inventory" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Inventory" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="warehouse" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Quản lý kho</span>
                        </a>
                    </li>

                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: rgba(255,255,255,0.6); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">QUẢN LÝ ĐƠN HÀNG</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Orders", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Orders" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Orders" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="shopping-cart" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Reviews", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Reviews" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Reviews" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="star" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Quản lý đánh giá</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Coupons", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Coupons" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Coupons" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="ticket" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Mã giảm giá</span>
                        </a>
                    </li>

                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: rgba(255,255,255,0.6); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">QUẢN LÝ CỬA HÀNG</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("StoreManagement", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "StoreManagement" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "StoreManagement" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="store" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cửa hàng của tôi</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("StoreSettings", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "StoreSettings" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "StoreSettings" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="settings-2" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cài đặt cửa hàng</span>
                        </a>
                    </li>

                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: rgba(255,255,255,0.6); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">BÁO CÁO & THỐNG KÊ</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Sales", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Sales" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Sales" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="trending-up" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Báo cáo bán hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Analytics", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Analytics" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Analytics" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="bar-chart-3" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Phân tích</span>
                        </a>
                    </li>

                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: rgba(255,255,255,0.6); font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">CÀI ĐẶT</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Profile", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Profile" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Profile" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="user-cog" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Hồ sơ cửa hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Settings", "Admin")" class="menu-link @(ViewData["CurrentSection"]?.ToString() == "Settings" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; color: rgba(255,255,255,0.9); text-decoration: none; border-radius: 12px; transition: all 0.3s ease; @(ViewData["CurrentSection"]?.ToString() == "Settings" ? "background: rgba(255,255,255,0.2); backdrop-filter: blur(15px);" : "")">
                            <i data-lucide="settings" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="sidebar-footer" style="padding: 1rem; margin-top: auto; border-top: 1px solid rgba(255,255,255,0.1);">
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm w-100 mb-3" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.2); color: rgba(255,255,255,0.9); border-radius: 12px; padding: 0.75rem; transition: all 0.3s ease; text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                    <i data-lucide="home" style="width: 16px;"></i>
                    <span>Về trang chủ</span>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form" style="margin: 0;">
                    <button type="submit" class="btn btn-sm w-100" style="background: rgba(220, 53, 69, 0.2); backdrop-filter: blur(10px); border: 1px solid rgba(220, 53, 69, 0.3); color: #ff6b7a; border-radius: 12px; padding: 0.75rem; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                        <i data-lucide="log-out" style="width: 16px;"></i>
                        <span>Đăng xuất</span>
                    </button>
                </form>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Header -->
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggleTop">
                        <i data-lucide="menu"></i>
                    </button>
                    @* Chỉ hiển thị breadcrumb khi có dữ liệu breadcrumb *@
                    @if (ViewData["Breadcrumb"] != null)
                    {
                        <div class="breadcrumb-wrapper">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                                    @Html.Raw(ViewData["Breadcrumb"])
                                </ol>
                            </nav>
                        </div>
                    }
                </div>

                <div class="header-right">
                    <div class="header-notifications">
                        <div class="dropdown">
                            <button class="btn btn-link notification-btn" type="button" data-bs-toggle="dropdown">
                                <i data-lucide="bell"></i>
                                <span class="notification-badge">2</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Thông báo</h6></li>
                                <li><a class="dropdown-item" href="#"><i data-lucide="shopping-cart" class="text-info"></i> Đơn hàng mới</a></li>
                                <li><a class="dropdown-item" href="#"><i data-lucide="alert-circle" class="text-warning"></i> Sản phẩm sắp hết hàng</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="#">Xem tất cả</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="user-dropdown">
                        <div class="dropdown">
                            <button class="btn btn-link user-btn" type="button" data-bs-toggle="dropdown">
                                <i data-lucide="user-circle"></i>
                                <span>@User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Admin")"><i data-lucide="user"></i> Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Settings", "Admin")"><i data-lucide="settings"></i> Cài đặt</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item"><i data-lucide="log-out"></i> Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="admin-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-script.js"></script>
    
    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggleTop');
            const sidebar = document.getElementById('sidebar');
            const sidebarClose = document.getElementById('sidebarToggle');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            if (sidebarClose) {
                sidebarClose.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            // Update toggle icon based on sidebar state
            function updateToggleIcon() {
                const icon = sidebarClose.querySelector('i');
                if (sidebar.classList.contains('active')) {
                    icon.setAttribute('data-lucide', 'x'); // X when open
                } else {
                    icon.setAttribute('data-lucide', 'menu'); // Menu when closed
                }
                lucide.createIcons(); // Re-render icons
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('active');
                        updateToggleIcon();
                    }
                }
            });

            // Initialize icon state
            updateToggleIcon();
            
            // Initialize Lucide icons
            lucide.createIcons();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>