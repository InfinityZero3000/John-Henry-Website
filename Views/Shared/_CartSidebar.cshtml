@model IEnumerable<JohnHenryFashionWeb.Models.ShoppingCartItem>

@{
    decimal cartTotal = ViewBag.CartTotal ?? 0;
    int cartCount = ViewBag.CartCount ?? 0;
}

<!-- Shopping Cart Sidebar -->
<div id="cart-sidebar" class="cart-sidebar">
    <div class="cart-sidebar-header">
        <h3 class="cart-title">
            <i data-lucide="shopping-bag"></i>
            Giỏ hàng (<span id="cart-items-count">@cartCount</span>)
        </h3>
        <button id="close-cart-sidebar" class="close-btn" type="button">
            <i data-lucide="x"></i>
        </button>
    </div>
    
    <div class="cart-sidebar-content">
        @if (Model != null && Model.Any())
        {
            <div class="cart-items" id="cart-items-list">
                @foreach (var item in Model)
                {
                    <div class="cart-item" data-cart-item-id="@item.Id">
                        <div class="cart-item-image">
                            @if (!string.IsNullOrEmpty(item.Product?.FeaturedImageUrl))
                            {
                                <img src="@item.Product.FeaturedImageUrl" alt="@item.Product?.Name" />
                            }
                            else
                            {
                                <div class="no-image">
                                    <i data-lucide="image"></i>
                                </div>
                            }
                        </div>
                        <div class="cart-item-details">
                            <h4 class="cart-item-name">@item.Product?.Name</h4>
                            <p class="cart-item-variant">
                                @if (!string.IsNullOrEmpty(item.Size))
                                {
                                    <span>Size: @item.Size</span>
                                }
                                @if (!string.IsNullOrEmpty(item.Color))
                                {
                                    <span>Màu: @item.Color</span>
                                }
                            </p>
                            <div class="cart-item-price-quantity">
                                <div class="quantity-controls">
                                    <button class="quantity-btn minus" data-action="decrease" data-cart-item-id="@item.Id">
                                        <i data-lucide="minus"></i>
                                    </button>
                                    <span class="quantity">@item.Quantity</span>
                                    <button class="quantity-btn plus" data-action="increase" data-cart-item-id="@item.Id">
                                        <i data-lucide="plus"></i>
                                    </button>
                                </div>
                                <div class="item-price">
                                    @(item.Price.ToString("N0")) đ
                                </div>
                            </div>
                        </div>
                        <button class="remove-item-btn" data-cart-item-id="@item.Id" title="Xóa sản phẩm">
                            <i data-lucide="trash-2"></i>
                        </button>
                    </div>
                }
            </div>
            
            <div class="cart-sidebar-footer">
                <div class="cart-total">
                    <div class="total-row">
                        <span>Tạm tính:</span>
                        <span class="total-amount" id="cart-total-amount">@cartTotal.ToString("N0") đ</span>
                    </div>
                </div>
                
                <div class="cart-actions">
                    <a href="/Cart" class="btn btn-outline view-cart-btn">
                        Xem giỏ hàng
                    </a>
                    <a href="/Checkout" class="btn btn-primary checkout-btn">
                        Thanh toán
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="empty-cart">
                <div class="empty-cart-icon">
                    <i data-lucide="shopping-bag"></i>
                </div>
                <h4>Giỏ hàng trống</h4>
                <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
            </div>
        }
    </div>
</div>

<!-- Cart Sidebar Overlay -->
<div id="cart-sidebar-overlay" class="cart-sidebar-overlay"></div>

<style>
/* Cart Sidebar Styles */
.cart-sidebar {
    position: fixed;
    top: 0;
    right: -400px;
    width: 400px;
    height: 100vh;
    background: white;
    z-index: 9997;
    transition: right 0.3s ease-in-out;
    box-shadow: -2px 0 10px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
}

/* Global link color override for cart sidebar */
.cart-sidebar a,
.cart-sidebar a:link,
.cart-sidebar a:visited,
.cart-sidebar a:hover,
.cart-sidebar a:active {
    color: #000 !important;
    text-decoration: none !important;
}

.cart-sidebar.open {
    right: 0;
}

.cart-sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    z-index: 9996;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease-in-out;
    pointer-events: none;
}

.cart-sidebar-overlay.show {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

.cart-sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #eee;
}

.cart-title {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    color: #000;
}

.close-btn {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #000;
    padding: 5px;
    border-radius: 4px;
    transition: background-color 0.2s;
}

.close-btn:hover {
    background-color: #f5f5f5;
}

.cart-sidebar-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.cart-items {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
}

.cart-item {
    display: flex;
    gap: 12px;
    padding: 15px 0;
    border-bottom: 1px solid #eee;
    position: relative;
    padding-right: 35px; /* Extra space for remove button */
}

.cart-item:last-child {
    border-bottom: none;
}

.cart-item-image {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
}

.cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.no-image {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
}

.cart-item-details {
    flex: 1;
    min-width: 0;
    padding-right: 30px; /* Space for remove button */
}

.cart-item-name {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 4px 0;
    line-height: 1.4;
    color: #000;
    /* Text truncation for long product names - allow 2 lines */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-word;
    max-height: 2.8em; /* 2 lines * 1.4 line-height */
}

.cart-item-variant {
    font-size: 12px;
    color: #000;
    margin: 0 0 8px 0;
}

.cart-item-variant span {
    margin-right: 10px;
}

.cart-item-price-quantity {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: 8px;
}

.quantity-btn {
    width: 24px;
    height: 24px;
    border: 1px solid #ddd;
    background: white;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
}

.quantity-btn:hover {
    background: #f5f5f5;
}

.quantity {
    font-size: 14px;
    font-weight: 500;
    min-width: 20px;
    text-align: center;
    color: #000;
}

.item-price {
    font-size: 14px;
    font-weight: 600;
    color: #000;
}

.remove-item-btn {
    position: absolute;
    top: 10px;
    right: 0;
    background: none;
    border: none;
    color: #666;
    cursor: pointer;
    padding: 6px;
    border-radius: 4px;
    transition: all 0.2s;
    z-index: 10; /* Ensure button is always on top */
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
}

.remove-item-btn:hover {
    color: #d32f2f;
    background: #ffeaea;
}

.cart-sidebar-footer {
    border-top: 1px solid #eee;
    padding: 20px;
}

.cart-total {
    margin-bottom: 20px;
}

.total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
    font-weight: 600;
    color: #000;
}

.total-amount {
    color: #000;
    font-size: 18px;
}

.cart-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.btn {
    padding: 12px 20px;
    border-radius: 6px;
    text-decoration: none;
    text-align: center;
    font-weight: 500;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
    font-size: 14px;
}

.btn-outline {
    background: white;
    color: #000;
    border: 1px solid #ddd;
}

.btn-outline:hover {
    background: #f5f5f5;
    color: #000;
}

.btn-primary {
    background: #951329;
    color: white;
}

.btn-primary:hover {
    background: #555;
    color: white;
}

.empty-cart {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
    padding: 40px 20px;
}

.empty-cart-icon {
    font-size: 48px;
    color: #ccc;
    margin-bottom: 20px;
}

.empty-cart h4 {
    margin: 0 0 10px 0;
    color: #000;
}

.empty-cart p {
    margin: 0 0 20px 0;
    color: #000;
    font-size: 14px;
}
/* Mobile Responsive */
@@media (max-width: 768px) {
    .cart-sidebar {
        width: 100%;
        right: -100%;
    }
    
    .cart-item-name {
        font-size: 13px;
    }
    
    .cart-item-variant {
        font-size: 11px;
    }
}
</style>