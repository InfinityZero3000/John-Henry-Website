                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Products", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="package" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Sản phẩm của tôi</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("CreateProduct", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateProduct" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="plus" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Thêm sản phẩm</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Inventory", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inventory" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="warehouse" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Quản lý kho</span>
                        </a>
                    </li>

                    <!-- 3. QUẢN LÝ ĐƠN HÀNG -->
                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: #666666; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">QUẢN LÝ ĐƠN HÀNG</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Orders", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="shopping-cart" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Reviews", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reviews" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="star" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Quản lý đánh giá</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Coupons", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Coupons" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="ticket" style="margin-right: 1rem; width: 20px;"></i>
