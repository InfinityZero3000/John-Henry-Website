    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggleTop');
            const sidebar = document.getElementById('sidebar');
            const sidebarClose = document.getElementById('sidebarToggle');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            if (sidebarClose) {
                sidebarClose.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            // Update toggle icon based on sidebar state
            function updateToggleIcon() {
                const icon = sidebarClose.querySelector('i');
                if (sidebar.classList.contains('active')) {
                    icon.setAttribute('data-lucide', 'x'); // X when open
                } else {
                    icon.setAttribute('data-lucide', 'menu'); // Menu when closed
                }
                lucide.createIcons(); // Re-render icons
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('active');
                        updateToggleIcon();
                    }
                }
            });

            // Initialize icon state
            updateToggleIcon();
            
            // Initialize Lucide icons
            lucide.createIcons();
        });

        // ===== SAVE AND RESTORE SIDEBAR SCROLL POSITION - TRI·ªÜT ƒê·ªÇ =====
        // Ch·∫°y sau khi DOM ƒë√£ load ho√†n to√†n
        window.addEventListener('load', function() {
            const sidebarContent = document.querySelector('.sidebar-content');
            
            if (sidebarContent) {
                // Restore scroll position NGAY L·∫¨P T·ª®C v·ªõi requestAnimationFrame
                const savedScrollPosition = localStorage.getItem('sellerSidebarScrollPosition');
                if (savedScrollPosition) {
                    // D√πng requestAnimationFrame ƒë·ªÉ ƒë·∫£m b·∫£o DOM ƒë√£ render xong
                    requestAnimationFrame(() => {
                        sidebarContent.scrollTop = parseInt(savedScrollPosition);
                        console.log('Restored seller sidebar scroll to:', savedScrollPosition);
                    });
                }

                // Save scroll position li√™n t·ª•c khi scroll
                let scrollTimeout;
                sidebarContent.addEventListener('scroll', function() {
                    clearTimeout(scrollTimeout);
                    scrollTimeout = setTimeout(() => {
                        localStorage.setItem('sellerSidebarScrollPosition', sidebarContent.scrollTop);
                        console.log('Saved scroll position:', sidebarContent.scrollTop);
                    }, 100);
                });

                // Save NGAY KHI click v√†o menu link (tr∆∞·ªõc khi navigate)
                const menuLinks = document.querySelectorAll('.admin-sidebar .menu-link');
                menuLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        localStorage.setItem('sellerSidebarScrollPosition', sidebarContent.scrollTop);
                        console.log('Saved on click:', sidebarContent.scrollTop);
                    });
                });
            }
        });

        // Backup: Restore TH√äM 1 L·∫¶N N·ªÆA sau 100ms (ph√≤ng tr∆∞·ªùng h·ª£p CSS ch·∫≠m load)
        setTimeout(function() {
            const sidebarContent = document.querySelector('.sidebar-content');
            const savedScrollPosition = localStorage.getItem('sellerSidebarScrollPosition');
            if (sidebarContent && savedScrollPosition) {
                sidebarContent.scrollTop = parseInt(savedScrollPosition);
                console.log('Backup restore:', savedScrollPosition);
            }
        }, 100);

        // ===== FIX GRAY OVERLAY / MODAL BACKDROP ISSUE =====
        // Clean up any leftover modal backdrops or modal-open class
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîß Checking for modal backdrop cleanup...');
            
            // Remove modal-open class from body
            document.body.classList.remove('modal-open');
            
            // Remove any leftover modal backdrops
            const backdrops = document.querySelectorAll('.modal-backdrop');
            if (backdrops.length > 0) {
                console.log('üóëÔ∏è Removing', backdrops.length, 'modal backdrops');
                backdrops.forEach(backdrop => backdrop.remove());
            }
            
            // Remove any elements with position fixed and high z-index that might be overlays
            const allElements = document.querySelectorAll('*');
            allElements.forEach(el => {
                const style = window.getComputedStyle(el);
                if (style.position === 'fixed' && 
                    parseInt(style.zIndex) > 1000 && 
                    style.backgroundColor !== 'rgba(0, 0, 0, 0)' &&
                    !el.classList.contains('admin-sidebar') &&
                    !el.classList.contains('admin-header')) {
                    console.log('üóëÔ∏è Found suspicious overlay element:', el);
                    // Check if it's covering the screen
                    if (el.offsetWidth > window.innerWidth * 0.8 || 
                        el.offsetHeight > window.innerHeight * 0.8) {
                        console.log('‚ö†Ô∏è Removing overlay element');
                        el.remove();
                    }
                }
            });
            
            // Reset any overflow hidden on body
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
            
            console.log('‚úÖ Modal backdrop cleanup complete');
        });
        
        // Additional cleanup after 500ms to catch late-loading overlays
        setTimeout(function() {
            const backdrops = document.querySelectorAll('.modal-backdrop');
            if (backdrops.length > 0) {
                console.log('üóëÔ∏è Late cleanup: Removing', backdrops.length, 'modal backdrops');
                backdrops.forEach(backdrop => backdrop.remove());
            }
            document.body.classList.remove('modal-open');
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
        }, 500);
    </script>

