                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("StoreManagement", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "StoreManagement" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="store" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cửa hàng của tôi</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("StoreSettings", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "StoreSettings" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="settings-2" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cài đặt cửa hàng</span>
                        </a>
                    </li>

                    <!-- 5. BÁO CÁO & THỐNG KÊ -->
                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: #666666; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">BÁO CÁO & THỐNG KÊ</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Sales", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Sales" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="trending-up" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Báo cáo bán hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Analytics", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Analytics" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="bar-chart-3" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Phân tích</span>
                        </a>
                    </li>

                    <!-- 6. CÀI ĐẶT -->
                    <li class="menu-header" style="padding: 1rem 1.5rem 0.5rem; color: #666666; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">CÀI ĐẶT</li>
                    
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Profile", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="user-cog" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Hồ sơ cửa hàng</span>
                        </a>
                    </li>

                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Settings", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="settings" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="sidebar-footer" style="padding: 1rem; margin-top: auto; border-top: 1px solid #e8ecef; background: #f8f9fa;">
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm w-100 mb-3" style="border-radius: 12px; padding: 0.75rem; transition: all 0.3s ease; text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 0.5rem; font-weight: 500;">
                    <i data-lucide="home" style="width: 16px;"></i>
                    <span>Về trang chủ</span>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form" style="margin: 0;">
                    <button type="submit" class="btn btn-sm w-100" style="border-radius: 12px; padding: 0.75rem; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 0.5rem; font-weight: 500;">
                        <i data-lucide="log-out" style="width: 16px;"></i>
