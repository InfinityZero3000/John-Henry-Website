<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - John Henry Seller</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin-style.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-layout">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <span class="brand-text">Seller Dashboard</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <div class="sidebar-content">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-details">
                        <span class="user-name">@User.Identity?.Name</span>
                        <span class="user-role">Người bán</span>
                    </div>
                </div>

                <ul class="sidebar-menu">
                    <li class="menu-item">
                        <a href="@Url.Action("Dashboard", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="menu-header">QUẢN LÝ SẢN PHẨM</li>
                    
                    <li class="menu-item">
                        <a href="@Url.Action("Products", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")">
                            <i class="fas fa-box"></i>
                            <span>Sản phẩm của tôi</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("CreateProduct", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateProduct" ? "active" : "")">
                            <i class="fas fa-plus"></i>
                            <span>Thêm sản phẩm</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Inventory", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inventory" ? "active" : "")">
                            <i class="fas fa-warehouse"></i>
                            <span>Quản lý kho</span>
                        </a>
                    </li>

                    <li class="menu-header">QUẢN LÝ ĐƠN HÀNG</li>
                    
                    <li class="menu-item">
                        <a href="@Url.Action("Orders", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>

                    <li class="menu-header">BÁO CÁO & THỐNG KÊ</li>
                    
                    <li class="menu-item">
                        <a href="@Url.Action("Sales", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Sales" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Báo cáo bán hàng</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Analytics", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Analytics" ? "active" : "")">
                            <i class="fas fa-analytics"></i>
                            <span>Phân tích</span>
                        </a>
                    </li>

                    <li class="menu-header">CÀI ĐẶT</li>
                    
                    <li class="menu-item">
                        <a href="@Url.Action("Profile", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                            <i class="fas fa-user-cog"></i>
                            <span>Hồ sơ cửa hàng</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Settings", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active" : "")">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="sidebar-footer">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm w-100 mb-2">
                    <i class="fas fa-home"></i>
                    Về trang chủ
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                        <i class="fas fa-sign-out-alt"></i>
                        Đăng xuất
                    </button>
                </form>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Header -->
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggleTop">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="breadcrumb-wrapper">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Seller")">Dashboard</a></li>
                                @if (ViewData["Breadcrumb"] != null)
                                {
                                    @Html.Raw(ViewData["Breadcrumb"])
                                }
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="header-right">
                    <div class="header-notifications">
                        <div class="dropdown">
                            <button class="btn btn-link notification-btn" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">2</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Thông báo</h6></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-shopping-cart text-info"></i> Đơn hàng mới</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-exclamation-circle text-warning"></i> Sản phẩm sắp hết hàng</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="#">Xem tất cả</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="user-dropdown">
                        <div class="dropdown">
                            <button class="btn btn-link user-btn" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <span>@User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Seller")"><i class="fas fa-user"></i> Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Settings", "Seller")"><i class="fas fa-cog"></i> Cài đặt</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="admin-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-script.js"></script>
    
    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggleTop');
            const sidebar = document.getElementById('sidebar');
            const sidebarClose = document.getElementById('sidebarToggle');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            if (sidebarClose) {
                sidebarClose.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    updateToggleIcon();
                });
            }

            // Update toggle icon based on sidebar state
            function updateToggleIcon() {
                const icon = sidebarClose.querySelector('i');
                if (sidebar.classList.contains('active')) {
                    icon.className = 'fas fa-times'; // X when open
                } else {
                    icon.className = 'fas fa-bars'; // Hamburger when closed
                }
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('active');
                        updateToggleIcon();
                    }
                }
            });

            // Initialize icon state
            updateToggleIcon();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
