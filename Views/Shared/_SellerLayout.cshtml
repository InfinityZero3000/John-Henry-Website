            </div>
        </nav>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Header -->
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggleTop">
                        <i data-lucide="menu"></i>
                    </button>
                    @* Chỉ hiển thị breadcrumb khi có dữ liệu breadcrumb *@
                    @if (ViewData["Breadcrumb"] != null)
                    {
                        <div class="breadcrumb-wrapper">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Seller")">Dashboard</a></li>
                                    @Html.Raw(ViewData["Breadcrumb"])
                                </ol>
                            </nav>
                        </div>
                    }
                </div>

                <div class="header-right">
                    <div class="header-notifications">
                        <div class="dropdown">
                            <button class="btn btn-link notification-btn" type="button" data-bs-toggle="dropdown">
                                <i data-lucide="bell"></i>
                                <span class="notification-badge">2</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                                <li><h6 class="dropdown-header">Thông báo</h6></li>
                                <li><a class="dropdown-item" href="#"><i data-lucide="shopping-cart" class="text-info"></i> Đơn hàng mới</a></li>
                                <li><a class="dropdown-item" href="#"><i data-lucide="alert-circle" class="text-warning"></i> Sản phẩm sắp hết hàng</a></li>
