<!DOCTYPE html>
<html lang="vi" data-theme="seller">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - John Henry Seller</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <link href="~/css/seller-unified.css" rel="stylesheet" />
    
    <!-- Chart.js for Analytics -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/date-fns@2.29.3/index.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
    
    <!-- DataTables for Advanced Tables -->
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    
    <style>
        /* Seller-specific menu styling with blue accent */
        .menu-link {
            background: #ffffff !important;
            color: #3B82F6 !important;
            border: 2px solid #000000 !important;
        }
        
        .menu-link:hover {
            background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%) !important;
            color: #ffffff !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
            border-color: #000000 !important;
        }
        
        .menu-link.active {
            background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%) !important;
            color: white !important;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4) !important;
            transform: translateY(-2px);
            border-color: #000000 !important;
        }
        
        .sidebar-footer a {
            background: #3B82F6 !important;
            color: #ffffff !important;
            border: 2px solid #000000 !important;
        }
        
        .sidebar-footer a:hover {
            background: linear-gradient(135deg, #2563EB 0%, #1d4ed8 100%) !important;
            color: #ffffff !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.5);
            border-color: #000000 !important;
        }
        
        .sidebar-footer button {
            background: #3B82F6 !important;
            color: #ffffff !important;
            border: 2px solid #000000 !important;
        }
        
        .sidebar-footer button:hover {
            background: linear-gradient(135deg, #2563EB 0%, #1d4ed8 100%) !important;
            color: #ffffff !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.5);
            border-color: #000000 !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-layout">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <img src="~/images/logo.png" alt="John Henry Seller" />
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i data-lucide="menu"></i>
                </button>
            </div>

            <div class="sidebar-content">
                <ul class="sidebar-menu" style="list-style: none; padding: 0;">
                    
                    <!-- 1. DASHBOARD -->
                    <li class="menu-item" style="margin: 0.5rem 1rem; border-radius: 12px;">
                        <a href="@Url.Action("Dashboard", "Seller")" class="menu-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" style="display: flex; align-items: center; padding: 1rem; text-decoration: none; border-radius: 12px; transition: all 0.3s ease; font-weight: 500;">
                            <i data-lucide="gauge" style="margin-right: 1rem; width: 20px;"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- 2. QUẢN LÝ SẢN PHẨM -->
