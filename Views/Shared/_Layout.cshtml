        // Real Add to Cart function
        async function addToCart(productId, button, quantity = 1, size = null, color = null) {
            console.log('addToCart called:', { productId, quantity, size, color });
            
            // Check if user is authenticated
            const isAuthenticated = document.querySelector('.user-authenticated');
            if (!isAuthenticated) {
                console.log('User not authenticated, redirecting to login');
                // Redirect to login if not authenticated
                window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                return;
            }
            
            // Add loading state
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            button.disabled = true;

            try {
                const requestData = {
                    productId: productId,
                    quantity: quantity
                };
                
                if (size) requestData.size = size;
                if (color) requestData.color = color;

                console.log('Sending request to /Products/AddToCart with data:', requestData);

                const response = await fetch('/Products/AddToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify(requestData)
                });

                const result = await response.json();
                console.log('AddToCart result:', result);

                if (result.success) {
                    // Update cart count
                    updateCartCount(result.cartCount || 0);
                    
                    // Show success message
                    showNotification('Đã thêm sản phẩm vào giỏ hàng!', 'success');
                    
                    // Check if sidebar is already open
