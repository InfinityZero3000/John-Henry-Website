<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    @{
        var pageTitle = ViewBag.MetaTitle as string ?? ViewData["Title"]?.ToString() ?? "John Henry Fashion";
        var pageDescription = ViewBag.MetaDescription as string ?? "Thời trang nam nữ cao cấp với phong cách hiện đại và chất lượng tuyệt vời";
    }
    
    <title>@pageTitle</title>
    <meta name="description" content="@pageDescription" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />
    <meta property="og:title" content="@pageTitle" />
    <meta property="og:description" content="@pageDescription" />
    <meta property="og:image" content="@($"{Context.Request.Scheme}://{Context.Request.Host}/images/og-image.jpg")" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />
    <meta property="twitter:title" content="@pageTitle" />
    <meta property="twitter:description" content="@pageDescription" />
    <meta property="twitter:image" content="@($"{Context.Request.Scheme}://{Context.Request.Host}/images/og-image.jpg")" />
    
    <!-- Custom Meta Tags Section (for blog posts, etc.) -->
    @RenderSection("MetaTags", required: false)
    
    <!-- Canonical URL -->
    <link rel="canonical" href="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")" />
    
    <!-- Robots meta tag -->
    <meta name="robots" content="index, follow" />
    
    <!-- JSON-LD Structured Data -->
    @if (ViewBag.ProductJsonLd != null)
    {
        <script type="application/ld+json">@Html.Raw(ViewBag.ProductJsonLd)</script>
    }
    @if (ViewBag.WebsiteJsonLd != null)
    {
        <script type="application/ld+json">@Html.Raw(ViewBag.WebsiteJsonLd)</script>
    }
    @if (ViewBag.OrganizationJsonLd != null)
    {
        <script type="application/ld+json">@Html.Raw(ViewBag.OrganizationJsonLd)</script>
    }
    @if (ViewBag.BreadcrumbJsonLd != null)
    {
        <script type="application/ld+json">@Html.Raw(ViewBag.BreadcrumbJsonLd)</script>
    }
    
    <!-- Preload critical resources -->
    <link rel="preload" href="~/css/site.css" as="style">
    <link rel="preload" href="~/css/john-henry-style.css" as="style">
    <link rel="preload" href="~/lib/bootstrap/dist/css/bootstrap.min.css" as="style">
    
    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="dns-prefetch" href="//unpkg.com">
    
    <!-- Favicon and app icons -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/logo.png">
    <link rel="manifest" href="~/manifest.json">
    
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/john-henry-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-card-additions.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/z-index-hierarchy.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive-mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JohnHenryFashionWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous">
    
    <!-- Load Lucide synchronously for icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    
    @await RenderSectionAsync("Styles", required: false)
    <style>
        :root {
            --jh-red: #951329;
            --jh-dark-red: #7a0f21;
            --jh-white: #FFFFFF;
        }
        
        /* Global text color override */
        body, 
        p, 
        span, 
        div, 
        h1, h2, h3, h4, h5, h6,
        .text-muted,
        .text-secondary,
        .small,
        .store-phone,
        .store-name,
        .store-address,
        a,
        a:link,
        a:visited,
        a:hover,
        a:active,
        .text-decoration-none,
        i,
        .fas,
        .far,
        .fab,
        .fal,
        .fat,
        .fa-solid,
        .fa-regular,
        .fa-brands,
        .fa-light,
        .fa-thin,
        .text-success,
        .text-primary,
        .text-info,
        .text-warning,
        .text-danger {
            @* color: #000 !important; *@
        }
        
        /* Exception for white text elements */
        .btn-primary,
        .bg-dark *,
        .footer-section *,
        .text-light,
        .text-white {
            color: white !important;
        }
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        body {
            padding-top: 160px; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        /* Main content wrapper */
        .main-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            position: relative;
            z-index: 1;
        }
        
        main {
            flex: 1;
            position: relative;
            z-index: 1;
        }
        
        main * {
            position: relative;
            z-index: auto;
        }
        
        /* Top Red Line */
        .top-red-line {
            background: var(--jh-red);
            height: 40px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 9995;
        }
        
        /* Main Header */
        .main-header {
            background: #FFFFFF;
            background-color: #FFFFFF !important;
            position: fixed !important;
            top: 40px !important;
            left: 0;
            right: 0;
            z-index: 9995;
            transform: none !important;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #e9ecef;
        }
        
        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: auto;
            background: #FFFFFF;
            position: relative;
            z-index: 1;
        }
        
        .main-header .container {
            background: #FFFFFF;
            position: relative;
            z-index: 1;
        }
        
        .logo-section {
            display: flex;
            align-items: center;
        }
        
        .logo-icon {
            display: inline-block;
            transition: transform 0.3s ease;
            text-decoration: none;
        }
        
        
        .logo-icon img {
            width: 200px;
            height: 50px;
            object-fit: contain;
        }
        
        .brand-text {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            margin-left: 10px;
        }
        
        .search-section {
            flex: 1;
            max-width: 500px;
            margin: 0 30px;
            position: relative;
            /* z-index controlled by z-index-hierarchy.css */
        }
        
        .search-box {
            position: relative;
            z-index: 1;
        }
        
        .search-box input {
            width: 100%;
            padding: 6px 20px 6px 50px;
            border: 2px solid #e9ecef;
            border-radius: 25px;
            font-size: 14px;
            transition: all 0.3s ease;
            background-color: #dcddde;
            position: relative;
            z-index: 1;
        }
        
        .search-box input:focus {
            border-color: var(--jh-red);
            outline: none;
        }
        
        .search-box i {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 2;
        }
        
        /* Search Suggestions Dropdown */
        .search-suggestions {
            position: fixed !important;
            /* Position will be calculated by JavaScript */
            background: #ffffff !important; /* Pure white, no transparency */
            border: none !important; /* No border */
            border-radius: 12px !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15) !important; /* Softer shadow */
            z-index: 999999999 !important; /* Maximum z-index */
            max-height: 450px;
            overflow-y: auto;
            opacity: 1 !important;
            visibility: visible !important;
            display: none;
            pointer-events: auto !important;
            backdrop-filter: none !important; /* Remove blur effect */
            -webkit-backdrop-filter: none !important;
            filter: none !important; /* Remove any filter effects */
            transform: none !important; /* Remove any transform that creates stacking context */
        }
        
        .suggestions-loading {
            padding: 20px;
            text-align: center;
            color: #666;
            font-size: 14px;
        }
        
        .suggestions-loading::after {
            content: '...';
            animation: dots 1.5s steps(4, end) infinite;
        }
        
        @@keyframes dots {
            0%, 20% { content: '.'; }
            40% { content: '..'; }
            60%, 100% { content: '...'; }
        }
        
        .suggestions-header {
            padding: 14px 20px;
            border-bottom: 2px solid #8b0000;
            background: linear-gradient(135deg, #8b0000 0%, #a00000 100%); /* Red gradient header */
            font-size: 14px;
            color: #ffffff !important; /* White text */
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        
        .suggestions-header strong {
            color: #ffffff !important;
        }
        
        .suggestions-list {
            padding: 8px 0;
        }
        
        .suggestion-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 12px 20px;
            cursor: pointer;
            transition: background 0.2s ease;
            text-decoration: none;
            color: inherit;
        }
        
        .suggestion-item:hover {
            background: #f8f9fa;
        }
        
        .suggestion-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
            flex-shrink: 0;
        }
        
        .suggestion-info {
            flex: 1;
            min-width: 0;
        }
        
        .suggestion-name {
            font-size: 14px;
            font-weight: 500;
            color: #333;
            margin-bottom: 4px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .suggestion-price {
            font-size: 13px;
            color: var(--jh-red);
            font-weight: 600;
        }
        
        .no-suggestions {
            padding: 20px;
            text-align: center;
            color: #999;
            font-size: 14px;
        }
        
        .view-all-results {
            display: block;
            padding: 12px 20px;
            text-align: center;
            border-top: 1px solid #e9ecef;
            color: var(--jh-red);
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: background 0.2s ease;
        }
        
        .view-all-results:hover {
            background: #f8f9fa;
        }
        
        .header-icons {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .header-icon {
            color: #000000;
            font-size: 20px;
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .header-icon i[data-lucide] {
            width: 20px;
            height: 20px;
            stroke-width: 1.5;
        }
        
        .header-icon:hover {
            color: var(--jh-red);
            transform: translateY(-2px);
        }
        
        .cart-badge, .wishlist-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--jh-red);
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 10px;
            display: none; /* Hidden by default */
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .cart-badge.show, .wishlist-badge.show {
            display: flex; /* Show when has items */
        }
        
        .wishlist-badge {
            background: #951329;
        }
        
        /* Account Dropdown Styles */
        .account-dropdown {
            position: relative;
        }
        
        .account-menu {
            position: absolute;
            top: 100%;
            right: 0;
            background: var(--jh-white);
            min-width: 280px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
            border: none;
            padding: 0;
            display: none;
            z-index: 9999;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s ease;
            margin-top: 15px;
        }
        
        .account-dropdown:hover .account-menu,
        .account-menu.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }
        
        .account-header {
            padding: 20px;
            background: linear-gradient(135deg, var(--jh-red), var(--jh-dark-red));
            border-radius: 8px 8px 0 0;
            color: white;
        }
        
        .account-info h6 {
            margin: 0;
            font-weight: 600;
            font-size: 16px;
        }
        
        .account-info small {
            opacity: 0.9;
            font-size: 13px;
        }
        
        .account-divider {
            margin: 0;
            border-color: #e9ecef;
            opacity: 0.5;
        }
        
        .account-links {
            padding: 15px 0;
        }
        
        .account-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: #333;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
        }
        
        .account-link:hover {
            background: #f8f9fa;
            color: var(--jh-red);
            transform: translateX(5px);
        }
        
        .account-link i {
            width: 16px;
            color: #6c757d;
        }
        
        .account-link:hover i {
            color: var(--jh-red);
        }
        
        .logout-form {
            margin: 0;
        }
        
        .logout-btn {
            cursor: pointer;
        }
        
        .logout-btn:hover {
            background: #fee;
            color: #dc3545;
        }
        
        .logout-btn:hover i {
            color: #dc3545;
        }
        
        /* Navigation Section trong header */
        .nav-section {
            padding: 2px 0;
            @* margin-top: 1px; *@
            position: relative;
            z-index: 1;
        }
        
        .nav-menu {
            display: flex;
            justify-content: center;
            margin: 0;
            padding: 0;
            list-style: none;
            position: relative;
            z-index: 1;
        }
        
        .nav-item {
            margin: 0 30px;
        }
        
        .nav-link {
            color: #000000;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            padding: 10px 0;
            display: block;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: var(--jh-red);
            transition: width 0.3s ease;
        }
        
        .nav-link:hover::after,
        .nav-link.active::after {
            width: 100%;
        }
        
        .nav-link:hover {
            color: var(--jh-red);
        }
        
        /* Dropdown Styles */
        .nav-menu .nav-item {
            position: relative;
        }
        
        .nav-menu .nav-item .dropdown-menu {
            position: absolute;
            top: 100%;
            left: 0;
            background: var(--jh-white);
            min-width: 300px;
            max-width: 400px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
            border: none;
            border-radius: 0;
            padding: 35px !important;
            display: none !important;
            z-index: 9990;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }
        
        .nav-menu .nav-item:hover .dropdown-menu {
            display: block !important;
            opacity: 1;
            transform: translateY(0);
        }
        
        .nav-menu .dropdown-content {
            display: flex;
            flex-direction: column;
            gap: 30px !important;
            align-items: start;
        }
        
        .nav-menu .dropdown-categories {
            display: flex;
            flex-direction: column;
            gap: 25px !important;
            width: 100%;
        }
        
        .nav-menu .dropdown-category {
            display: block;
            color: #333;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-transform: uppercase;
            padding: 15px 0 !important;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .nav-menu .dropdown-category:hover {
            color: var(--jh-red);
        }
        
        .nav-menu .dropdown-category.active {
            color: var(--jh-red);
        }
        
        .nav-menu .dropdown-category.with-arrow::after {
            content: '\f054' !important; /* Font Awesome chevron-right */
            font-family: 'Font Awesome 6 Free' !important;
            font-weight: 900 !important;
            margin-left: 15px !important;
            font-size: 14px !important;
            color: #951329 !important;
            display: inline-block !important;
            vertical-align: middle !important;
        }
        
        .nav-menu .dropdown-category.with-arrow:hover::after {
            color: #95122A !important;
        }
        
        .nav-menu .dropdown-subcategories {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%;
            margin-top: 10px;
        }
        
        /* Submenu Styles */
        .nav-menu .dropdown-category-item {
            position: relative;
        }
        
        .nav-menu .dropdown-menu .submenu {
            position: absolute;
            left: 100%;
            top: 0;
            background: var(--jh-white);
            min-width: 250px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 15px;
            display: none !important;
            z-index: 10000;
            opacity: 0;
            transform: translateX(-10px);
            transition: all 0.3s ease;
            border-left: 3px solid var(--jh-red);
        }
        
        .nav-menu .dropdown-category-item:hover .submenu {
            display: block !important;
            opacity: 1;
            transform: translateX(0);
        }
        
        .nav-menu .submenu-item {
            display: block;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            text-transform: uppercase;
            padding: 15px 0 !important;
            transition: all 0.3s ease;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .nav-menu .submenu-item:last-child {
            border-bottom: none;
        }
        
        .nav-menu .submenu-item:hover {
            color: var(--jh-red);
            background: #f8f9fa;
            padding-left: 10px;
        }
        
        .nav-menu .subcategory-item {
            display: block;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            text-transform: uppercase;
            padding: 8px 0;
            transition: all 0.3s ease;
        }
        
        .nav-menu .subcategory-item:hover {
            color: var(--jh-red);
            transform: translateX(5px);
        }
        
        .dropdown-image {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border-radius: 8px;
            overflow: hidden;
            height: 200px;
        }
        
        .dropdown-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        @@keyframes slideDown {
            from {
                transform: translateY(-100%);
            }
            to {
                transform: translateY(0);
            }
        }
        
        @@media (max-width: 768px) {
            body {
                padding-top: 140px;
            }
            
            .header-content {
                flex-direction: column;
                gap: 10px;
            }
            
            .search-section {
                order: 3;
                max-width: 100%;
                margin: 0;
            }
            
            .header-icons {
                gap: 15px;
            }
            
            .header-icon {
                font-size: 18px;
            }
            
            .nav-menu {
                flex-wrap: wrap;
                justify-content: center;
            }
            
            .nav-item {
                margin: 0 15px;
            }
            
            .logo-icon img {
                width: 100px;
                height: 100px;
            }
            
            /* Mobile Dropdown Adjustments */
            .dropdown-menu {
                min-width: 90vw;
                left: -20vw;
                padding: 15px;
                max-width: none;
            }
            
            .dropdown-content {
                gap: 15px;
            }
            
            .dropdown-subcategories {
                gap: 8px;
            }
            
            /* Mobile Submenu */
            .submenu {
                position: static;
                box-shadow: none;
                border-left: none;
                border-top: 2px solid var(--jh-red);
                margin-top: 10px;
                transform: none;
                display: none;
            }
            
            .dropdown-category-item:hover .submenu {
                display: block;
                opacity: 1;
            }
            
            .dropdown-image {
                height: 150px;
            }
        }
        
        @@media (max-width: 480px) {
            body {
                padding-top: 140px;
            }
            
            .brand-text {
                font-size: 20px;
            }
            
            .logo-icon img {
                width: 110px;
                height: 110px;
            }
            
            .header-icons {
                gap: 12px;
            }
        }
        
        /* Footer Styles */
        .footer-section {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            color: #ffffff;
            margin-top: 0;
            position: relative;
        }
        
        .footer-brand .brand-logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .footer-description {
            color: #cccccc;
            line-height: 1.6;
            margin-bottom: 25px;
        }
        
        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .contact-item {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #cccccc;
            font-size: 0.9rem;
        }
        
        .contact-item i {
            color: var(--jh-red);
            width: 16px;
        }
        
        .footer-title {
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .footer-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .footer-links li {
            margin-bottom: 8px;
        }
        
        .footer-link {
