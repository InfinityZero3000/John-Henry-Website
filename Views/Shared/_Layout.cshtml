                    });
                    
                    // Toggle current nested submenu
                    if (isActive) {
                        this.classList.remove('active');
                        submenu.classList.remove('active');
                    } else {
                        this.classList.add('active');
                        submenu.classList.add('active');
                    }
                });
            });
            
            // Initialize AOS
            AOS.init({
                duration: 1000,
                easing: 'ease-out-cubic',
                once: true
            });

            // Back to Top Button Functionality
            const backToTopBtn = document.getElementById('backToTop');
            
            if (backToTopBtn) {
                // Show/hide button based on scroll position
                window.addEventListener('scroll', function() {
                    if (window.pageYOffset > 300) {
                        backToTopBtn.classList.add('show');
                    } else {
                        backToTopBtn.classList.remove('show');
                    }
                });
                
                // Smooth scroll to top when clicked
                backToTopBtn.addEventListener('click', function() {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }

            // Logo Lottie animation on page load
            const logoAnimation = document.getElementById('logoAnimation');
            const brandText = document.getElementById('brandText');
            
            if (logoAnimation && brandText) {
                // Hide brand text initially and show after logo animation
                brandText.style.opacity = '0';
                
                // Play logo animation and then show text
                setTimeout(() => {
                    if (typeof gsap !== 'undefined') {
                        gsap.to(brandText, { duration: 1, opacity: 1, x: 0, ease: "power2.out" });
                    } else {
                        brandText.style.opacity = '1';
                    }
                }, 1000);
            }
            
            // Logo hover effect
            const logoContainer = document.getElementById('logoContainer');
            if (logoContainer && logoAnimation && typeof logoAnimation.play === 'function') {
                logoContainer.addEventListener('mouseenter', () => {
                    logoAnimation.play();
                });
            }

            // Header is now fixed and won't move on scroll
            const header = document.querySelector('.main-header');
            
            // Force fixed positioning and reset any transforms
            function keepHeaderFixed() {
                if (header) {
                    header.style.position = 'fixed';
                    header.style.top = '4px';
                    header.style.transform = 'none';
                    header.style.transition = 'none';
                }
            }
            
            // Apply immediately and on any changes
            keepHeaderFixed();
            setInterval(keepHeaderFixed, 100); // Check every 100ms

            // GSAP animations for header and footer
            gsap.from("header", { duration: 1, y: -50, opacity: 0, ease: "power2.out" });
            gsap.from("footer", { duration: 1, y: 50, opacity: 0, ease: "power2.out" });
        });
    </script>
    
