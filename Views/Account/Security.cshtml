@model JohnHenryFashionWeb.ViewModels.SecurityDashboardViewModel
@{
    ViewData["Title"] = "Bảo mật tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 px-0">
            <div class="bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Profile">
                                <i class="fas fa-user me-2"></i>Thông tin cá nhân
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Orders">
                                <i class="fas fa-shopping-bag me-2"></i>Đơn hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Security">
                                <i class="fas fa-shield-alt me-2"></i>Bảo mật
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ChangePassword">
                                <i class="fas fa-key me-2"></i>Đổi mật khẩu
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Bảo mật tài khoản</h1>
            </div>

            <!-- Security Overview -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Tổng quan bảo mật</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="security-score">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="security-score-circle me-3">
                                                <span class="score">@Model.SecurityScore</span>
                                            </div>
                                            <div>
                                                <h6 class="mb-1">Điểm bảo mật</h6>
                                                <small class="text-muted">Dựa trên cài đặt bảo mật hiện tại</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="security-status">
                                        <div class="d-flex align-items-center">
                                            @if (Model.SecurityScore >= 80)
                                            {
                                                <div class="status-indicator bg-success me-2"></div>
                                                <span class="text-success fw-semibold">Tài khoản được bảo mật tốt</span>
                                            }
                                            else if (Model.SecurityScore >= 60)
                                            {
                                                <div class="status-indicator bg-warning me-2"></div>
                                                <span class="text-warning fw-semibold">Cần cải thiện bảo mật</span>
                                            }
                                            else
                                            {
                                                <div class="status-indicator bg-danger me-2"></div>
                                                <span class="text-danger fw-semibold">Bảo mật yếu</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Two-Factor Authentication -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-mobile-alt me-2"></i>Xác thực hai yếu tố (2FA)</h5>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h6>Xác thực hai yếu tố</h6>
                                    <p class="text-muted mb-0">
                                        Thêm lớp bảo mật bổ sung cho tài khoản của bạn bằng cách yêu cầu mã xác thực khi đăng nhập.
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    @if (Model.IsTwoFactorEnabled)
                                    {
                                        <span class="badge bg-success fs-6 me-2">Đã bật</span>
                                        <button class="btn btn-outline-danger" onclick="toggleTwoFactor(false)">
                                            Tắt 2FA
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6 me-2">Đã tắt</span>
                                        <button class="btn btn-success" onclick="toggleTwoFactor(true)">
                                            Bật 2FA
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Active Sessions -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-devices me-2"></i>Phiên đăng nhập hoạt động</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.ActiveSessions?.Any() == true)
                            {
                                @foreach (var session in Model.ActiveSessions)
                                {
                                    <div class="session-item border-bottom py-3">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <div class="device-icon">
                                                    @if (session.DeviceType.Contains("Mobile"))
                                                    {
                                                        <i class="fas fa-mobile-alt fa-2x text-primary"></i>
                                                    }
                                                    else if (session.DeviceType.Contains("Tablet"))
                                                    {
                                                        <i class="fas fa-tablet-alt fa-2x text-primary"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-desktop fa-2x text-primary"></i>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="session-details">
                                                    <h6 class="mb-1">@session.DeviceType</h6>
                                                    <p class="text-muted mb-1">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        @session.Location
                                                    </p>
                                                    <small class="text-muted">
                                                        Đăng nhập lần cuối: @session.LastActivity.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                    @if (session.IsCurrentSession)
                                                    {
                                                        <span class="badge bg-success ms-2">Phiên hiện tại</span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                @if (!session.IsCurrentSession)
                                                {
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            onclick="terminateSession('@session.SessionId')">
                                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Không có phiên đăng nhập hoạt động nào.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Logs -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử hoạt động bảo mật</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.SecurityLogs?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Hoạt động</th>
                                                <th>Thời gian</th>
                                                <th>IP Address</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var log in Model.SecurityLogs.Take(10))
                                            {
                                                <tr>
                                                    <td>
                                                        <i class="fas fa-@(GetActivityIcon(log.Action)) me-2"></i>
                                                        @GetActivityDescription(log.Action)
                                                    </td>
                                                    <td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@log.IpAddress</td>
                                                    <td>
                                                        @if (log.IsSuccessful)
                                                        {
                                                            <span class="badge bg-success">Thành công</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Thất bại</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có hoạt động bảo mật nào được ghi lại.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: fixed;
        top: 56px;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar-sticky {
        position: relative;
        top: 0;
        height: calc(100vh - 56px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
    }

    .sidebar .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
    }

    .sidebar .nav-link.active {
        color: #007bff;
        background-color: rgba(0, 123, 255, .1);
    }

    .security-score-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--jh-red) 0%, var(--jh-dark-red) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .status-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .session-item:last-child {
        border-bottom: none !important;
    }

    .device-icon {
        text-align: center;
    }

    @@media (max-width: 767.98px) {
        .sidebar {
            position: static;
            height: auto;
        }
    }
</style>

@section Scripts {
    <script>
        function toggleTwoFactor(enable) {
            fetch('/api/security/toggle-two-factor', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ enable: enable })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra. Vui lòng thử lại.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra. Vui lòng thử lại.');
            });
        }

        function terminateSession(sessionId) {
            if (confirm('Bạn có chắc chắn muốn đăng xuất phiên này?')) {
                fetch('/api/security/terminate-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ sessionId: sessionId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra. Vui lòng thử lại.');
                });
            }
        }
    </script>
}

@functions {
    private string GetActivityIcon(string action)
    {
        return action.ToLower() switch
        {
            "login" => "sign-in-alt",
            "logout" => "sign-out-alt",
            "passwordchange" => "key",
            "twofactorenabled" => "shield-alt",
            "twofactordisabled" => "shield-alt",
            _ => "info-circle"
        };
    }

    private string GetActivityDescription(string action)
    {
        return action.ToLower() switch
        {
            "login" => "Đăng nhập",
            "logout" => "Đăng xuất",
            "passwordchange" => "Đổi mật khẩu",
            "twofactorenabled" => "Bật xác thực hai yếu tố",
            "twofactordisabled" => "Tắt xác thực hai yếu tố",
            _ => action
        };
    }
}
