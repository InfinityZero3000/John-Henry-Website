@model JohnHenryFashionWeb.ViewModels.ConfirmEmailViewModel
@{
    ViewData["Title"] = "Xác nhận email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    @if (Model.IsConfirmed)
                    {
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        
                        <h2 class="fw-bold text-success mb-3">Email đã được xác nhận!</h2>
                        
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập ngay
                        </a>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                        </div>
                        
                        <h2 class="fw-bold text-warning mb-3">Xác nhận email thất bại</h2>
                        
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Link xác nhận có thể đã hết hạn hoặc không hợp lệ. 
                            Vui lòng liên hệ hỗ trợ nếu vấn đề vẫn tiếp tục.
                        </div>
                        
                        <a asp-action="Login" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại đăng nhập
                        </a>
                        
                        <a asp-action="Register" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký lại
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
