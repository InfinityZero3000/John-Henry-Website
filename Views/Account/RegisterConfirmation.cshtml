@{
    ViewData["Title"] = "Đăng ký thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-circle-check text-primary" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="fw-bold text-primary mb-3">Đăng ký thành công!</h2>
                    
                    <p class="text-muted mb-4">
                        @ViewBag.Message
                    </p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Vui lòng kiểm tra email và click vào link xác nhận để kích hoạt tài khoản.
                    </div>
                    
                    <a asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Đến trang đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
