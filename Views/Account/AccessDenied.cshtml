@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <div class="mb-4">
                    <i class="fas fa-ban text-danger" style="font-size: 5rem;"></i>
                </div>
                <h1 class="h2 mb-3">Truy cập bị từ chối</h1>
                <p class="lead text-muted mb-4">
                    Bạn không có quyền truy cập vào trang này.
                </p>
                
                @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Bạn đang cố truy cập: <code>@ViewData["ReturnUrl"]</code>
                    </div>
                }
                
                <div class="mt-4">
                    <p class="text-muted mb-3">
                        Nếu bạn cần quyền truy cập, vui lòng liên hệ với quản trị viên.
                    </p>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            Về trang chủ
                        </a>
                        
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Index", "UserDashboard")" class="btn btn-outline-primary">
                                <i class="fas fa-user me-2"></i>
                                Trang cá nhân
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account", new { returnUrl = ViewData["ReturnUrl"] })" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



