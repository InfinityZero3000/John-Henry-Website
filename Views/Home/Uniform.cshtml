@{
    ViewData["Title"] = "UNIFORM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/john-henry-style.css" />
    <link rel="stylesheet" href="~/css/dropdown.css" />
    <style>
        .uniform-page {
            min-height: 100vh;
        }

        .page-header {
            text-align: center;
            padding: 3rem 0 2rem;
            background: linear-gradient(135deg, var(--jh-red), var(--jh-dark-red));
            color: white;
            margin-bottom: 3rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
            letter-spacing: 2px;
        }

        .page-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Banner sections */
        .banner-section {
            margin-bottom: 0;
            width: 100vw;
            margin-left: calc(50% - 50vw);
        }

        .banner-img {
            width: 100%;
            height: auto;
            display: block;
        }

        /* Banner-2 group (horizontal layout) */
        .banner-2-group {
            margin: 4rem 0;
            width: 100vw;
            margin-left: calc(50% - 50vw);
        }

        .banner-2-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0;
            padding: 0;
            justify-content: center;
            align-items: stretch;
        }

        .banner-2-item {
            flex: 1;
            min-width: 0;
        }

        .banner-2-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        /* Product grid */
        .products-section {
            margin-top: 4rem;
            padding: 3rem 0;
            background-color: white;
        }

        .section-title {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 3rem;
            color: var(--jh-red);
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, var(--jh-red), var(--jh-gold));
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
            padding: 0 1rem;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Responsive design */
        @@media (max-width: 1200px) {
            .products-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 1.2rem;
            }
        }

        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .banner-2-container {
                flex-direction: column;
            }

            .banner-2-item {
                flex: none;
            }

            .banner-2-item img {
                height: 150px;
            }

            .products-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 1rem;
            }

            .product-image {
                height: 200px;
            }
        }

        @@media (max-width: 480px) {
            .banner-2-container {
                flex-direction: column;
            }

            .banner-2-item img {
                height: 120px;
            }

            .products-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .product-image {
                height: 180px;
            }
        }
    </style>
}

<div class="uniform-page">

