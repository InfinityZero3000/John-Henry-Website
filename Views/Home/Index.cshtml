                @foreach (var post in (List<JohnHenryFashionWeb.Models.BlogPost>)ViewBag.LatestBlogPosts)
                {
                    var publishDate = post.PublishedAt ?? post.CreatedAt;
                    var excerpt = "";
                    
                    if (!string.IsNullOrEmpty(post.Excerpt))
                    {
                        excerpt = post.Excerpt.Length > 120 ? post.Excerpt.Substring(0, 120) + "..." : post.Excerpt;
