@section Scripts {
    <script>
        // Hero carousel simple auto-play
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize carousel with auto-play
            const carousel = new bootstrap.Carousel(document.querySelector('#heroCarousel'), {
                interval: 4000,
                wrap: true,
                ride: 'carousel'
            });
        });
    </script>
}

<style>
    :root {
        --jh-red: #CE193A;
        --jh-dark-red: #95122A;
        --jh-white: #FFFFFF;
        --jh-gold: #FFD700;
        --primary-color: #CE193A;
    }
    
    .hero-carousel {
        height: 60vh; /* Giảm từ 100vh xuống 60vh */
        overflow: hidden;
        position: relative;
    }
    
    .carousel-inner {
        height: 100%;
    }
    
    .carousel-item {
        height: 60vh; /* Giảm từ 100vh xuống 60vh */
    }
    
    .hero-slide {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
    }
    
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }
    
    .hero-bg-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    /* Carousel Controls */
    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        color: white;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }
    
    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        opacity: 1;
    }
    
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 2rem;
        height: 2rem;
        background-size: 100%, 100%;
        border-radius: 50%;
        background-color: rgba(0,0,0,0.3);
    }
    
    /* Carousel Indicators */
    .carousel-indicators {
        bottom: 20px;
        margin-bottom: 0;
    }
    
    .carousel-indicators [data-bs-target] {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin: 0 5px;
        background-color: rgba(255,255,255,0.5);
        border: none;
        transition: all 0.3s ease;
    }
    
    .carousel-indicators .active {
        background-color: var(--jh-red);
        transform: scale(1.2);
    }
    
    /* Small Banners Section */
