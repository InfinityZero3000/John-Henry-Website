@section Scripts {
    <script>
        // Hero carousel simple auto-play
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize carousel with auto-play
            const carousel = new bootstrap.Carousel(document.querySelector('#heroCarousel'), {
                interval: 4000,
                wrap: true,
                ride: 'carousel'
            });
        });
    </script>
}

<style>
    :root {
        --jh-red: #CE193A;
        --jh-dark-red: #95122A;
        --jh-white: #FFFFFF;
        --jh-gold: #FFD700;
        --primary-color: #CE193A;
    }
    
    .hero-carousel {
        height: 60vh; /* Giảm từ 100vh xuống 60vh */
        overflow: hidden;
        position: relative;
    }
    
    .carousel-inner {
        height: 100%;
    }
    
    .carousel-item {
        height: 60vh; /* Giảm từ 100vh xuống 60vh */
    }
    
    .hero-slide {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
    }
    
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }
    
    .hero-bg-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    /* Carousel Controls */
    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        color: white;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }
    
    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        opacity: 1;
    }
    
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 2rem;
        height: 2rem;
        background-size: 100%, 100%;
        border-radius: 50%;
        background-color: rgba(0,0,0,0.3);
    }
    
    /* Carousel Indicators */
    .carousel-indicators {
        bottom: 20px;
        margin-bottom: 0;
    }
    
    .carousel-indicators [data-bs-target] {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin: 0 5px;
        background-color: rgba(255,255,255,0.5);
        border: none;
        transition: all 0.3s ease;
    }
    
    .carousel-indicators .active {
        background-color: var(--jh-red);
        transform: scale(1.2);
    }
    
    /* Small Banners Section */
    .small-banners-section {
        padding: 30px 0;
        background-color: #f8f9fa;
    }
    
    .small-banner-card {
        background: white;
        border-radius: 0; /* Loại bỏ bo góc */
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .small-banner-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .small-banner-image {
        position: relative;
        width: 100%;
        height: 250px;
        overflow: hidden;
    }
    
    .small-banner-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .small-banner-card:hover .small-banner-image img {
        transform: scale(1.05);
    }
    
    .small-banner-content {
        padding: 20px;
        text-align: center;
        background: white;
    }
    
    .small-banner-content h4 {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #333;
        line-height: 1.3;
    }
    
    .banner-link {
        color: var(--jh-red);
        font-weight: 600;
        font-size: 0.9rem;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: color 0.3s ease;
    }
    
    .small-banner-card:hover .banner-link {
        color: var(--jh-dark-red);
    }
    
    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-carousel {
            height: 50vh;
        }
        
        .carousel-item {
            height: 50vh;
        }
        
        .carousel-control-prev,
        .carousel-control-next {
            width: 10%;
        }
        
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 1.5rem;
            height: 1.5rem;
        }
        
        .small-banners-section {
            padding: 20px 0;
        }
        
        .small-banner-image {
            height: 200px;
        }
        
        .small-banner-content {
            padding: 15px;
        }
        
        .small-banner-content h4 {
            font-size: 1rem;
        }
        
        .banner-link {
            font-size: 0.8rem;
        }
    }
    
    @@media (max-width: 576px) {
        .hero-carousel {
            height: 40vh;
        }
        
        .carousel-item {
            height: 40vh;
        }
        
        .carousel-indicators [data-bs-target] {
            width: 10px;
            height: 10px;
        }
        
        .small-banners-section {
            padding: 15px 0;
        }
        
        .small-banner-image {
            height: 180px;
        }
        
        .small-banner-content {
            padding: 12px;
        }
        
        .small-banner-content h4 {
            font-size: 0.9rem;
            line-height: 1.2;
        }
        
        .banner-link {
            font-size: 0.75rem;
        }
        
        .row.g-3 {
            gap: 15px;
