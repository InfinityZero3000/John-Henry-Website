@model IEnumerable<JohnHenryFashionWeb.Models.BlogPost>
@{
    ViewData["Title"] = "John Henry - Blog Thời Trang";
}

<!-- Blog Hero Banner -->
<section class="blog-hero-banner">
    <div class="blog-banner-container">
        <img src="~/images/Banner/banner-blog.jpg" alt="John Henry Blog" class="blog-banner-img">
        </div>
    </div>
</section>

<section class="blog-content-section py-5">
    <div class="container">
        @if (ViewBag.DatabaseError != null)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ViewBag.DatabaseError
                    </div>
                </div>
            </div>
        }
        
        <!-- Search Form -->
        <div class="row mb-4">
            <div class="col-lg-6 mx-auto">
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Tìm kiếm bài viết...">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <!-- Categories Filter -->
        @if (ViewBag.Categories != null && ((List<JohnHenryFashionWeb.Models.BlogCategory>)ViewBag.Categories).Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <a asp-action="Index" class="btn @(string.IsNullOrEmpty(ViewBag.Category as string) ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Tất cả
                        </a>
                        @foreach (var category in (List<JohnHenryFashionWeb.Models.BlogCategory>)ViewBag.Categories)
                        {
                            <a asp-action="Category" asp-route-slug="@category.Slug" 
                               class="btn @(ViewBag.Category as string == category.Slug ? "btn-primary" : "btn-outline-primary") btn-sm">
                                @category.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Search Results Info -->
        @if (!string.IsNullOrEmpty(ViewBag.Search as string))
        {
            <div class="alert alert-info mb-4">
                <i class="fas fa-search me-2"></i>
                Kết quả tìm kiếm cho: <strong>"@ViewBag.Search"</strong>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">Xóa bộ lọc</a>
            </div>
        }

        <!-- Blog Grid -->
        @if (Model.Any())
        {
            <div class="row g-4">
                @foreach (var post in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="blog-post-card">
                            <div class="blog-post-image">
                                @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                {
                                    <img src="@post.FeaturedImageUrl" alt="@post.Title" class="img-fluid">
                                }
                                else
                                {
                                    <img src="~/images/Banner/banner-blog.jpg" alt="@post.Title" class="img-fluid">
                                }
                                <div class="blog-post-date">
                                    <span class="date-day">@((post.PublishedAt ?? post.CreatedAt).ToString("dd"))</span>
                                    <span class="date-month">@((post.PublishedAt ?? post.CreatedAt).ToString("MMM").ToUpper())</span>
                                    <span class="date-year">@((post.PublishedAt ?? post.CreatedAt).ToString("yyyy"))</span>
                                </div>
                            </div>
                            <div class="blog-post-content">
                                <div class="blog-post-meta">
                                    @if (post.Category != null)
                                    {
                                        <span class="blog-category">@post.Category.Name.ToUpper()</span>
                                    }
                                    else
                                    {
                                        <span class="blog-category">BLOG</span>
                                    }
                                </div>
                                <h3 class="blog-post-title">@post.Title</h3>
                                <p class="blog-post-excerpt">
                                    @if (!string.IsNullOrEmpty(post.Excerpt))
                                    {
                                        @(post.Excerpt.Length > 120 ? post.Excerpt.Substring(0, 120) + "..." : post.Excerpt)
                                    }
                                    else if (!string.IsNullOrEmpty(post.Content))
                                    {
                                        var plainContent = System.Text.RegularExpressions.Regex.Replace(post.Content, "<.*?>", "");
                                        @(plainContent.Length > 120 ? plainContent.Substring(0, 120) + "..." : plainContent)
                                    }
                                </p>
                                <div class="blog-post-footer">
                                    <span class="blog-post-date-text">@((post.PublishedAt ?? post.CreatedAt).ToString("dd/MM/yyyy"))</span>
                                    <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="blog-read-more">Xem thêm »</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không có bài viết nào</h5>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                    {
                        @:Không tìm thấy bài viết nào phù hợp với từ khóa "@ViewBag.Search".
                    }
                    else
                    {
                        @:Hiện tại chưa có bài viết nào được đăng.
                    }
                </p>
            </div>
        }

        <!-- Pagination -->
        @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
        {
            <div class="blog-pagination mt-5">
                <nav aria-label="Blog pagination">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, category = ViewBag.Category, search = ViewBag.Search })">« Trước</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">« Trước</span>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            @if (i == ViewBag.CurrentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, category = ViewBag.Category, search = ViewBag.Search })">@i</a>
                                </li>
                            }
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, category = ViewBag.Category, search = ViewBag.Search })">Tiếp »</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Tiếp »</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</section>

<style>
    :root {
        --jh-red: #951329;
        --jh-dark-red: #95122A;
        --jh-white: #FFFFFF;
        --jh-gold: #FFD700;
        --primary-color: #951329;
    }

    /* Blog Hero Banner */
    .blog-hero-banner {
        position: relative;
        height: 850px;
        overflow: hidden;
    }

    .blog-banner-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .blog-banner-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .blog-banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .blog-banner-content {
        z-index: 2;
    }

    .blog-banner-title {
        font-size: 3rem;
        font-weight: 900;
        letter-spacing: 2px;
        margin-bottom: 1rem;
        text-transform: uppercase;
    }

    .blog-banner-subtitle {
        font-size: 1.3rem;
        font-weight: 400;
        margin: 0;
        opacity: 0.9;
    }

    /* Blog Content Section */
    .blog-content-section {
        background-color: #f8f9fa;
    }

    .blog-post-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #e9ecef;
    }

    .blog-post-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
    }

    .blog-post-image {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

    .blog-post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .blog-post-card:hover .blog-post-image img {
        transform: scale(1.05);
    }

    .blog-post-date {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--primary-color);
        color: white;
        padding: 10px 15px;
        border-radius: 8px;
        text-align: center;
        font-weight: 600;
        line-height: 1.2;
        box-shadow: 0 4px 15px rgba(206, 25, 58, 0.3);
    }

    .blog-post-date .date-day {
        display: block;
        font-size: 1.4rem;
        font-weight: 900;
    }

    .blog-post-date .date-month {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .blog-post-date .date-year {
        display: block;
        font-size: 0.7rem;
        opacity: 0.8;
    }

    .blog-post-content {
        padding: 25px;
    }

    .blog-post-meta {
        margin-bottom: 15px;
    }

    .blog-category {
        background: linear-gradient(45deg, var(--primary-color), var(--jh-dark-red));
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .blog-post-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.4;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .blog-post-title:hover {
        color: var(--primary-color);
        cursor: pointer;
    }

    .blog-post-excerpt {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 20px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .blog-post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid #e9ecef;
    }

    .blog-post-date-text {
        color: #6c757d;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .blog-read-more {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .blog-read-more:hover {
        color: var(--jh-dark-red);
        transform: translateX(3px);
    }

    /* Pagination */
    .blog-pagination .pagination {
        margin: 0;
    }

    .blog-pagination .page-link {
        color: var(--primary-color);
        border: 1px solid #dee2e6;
        padding: 12px 18px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .blog-pagination .page-link:hover {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .blog-pagination .page-item.active .page-link {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .blog-pagination .page-item.disabled .page-link {
        color: #6c757d;
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }

    /* Sidebar Styles */
    .card {
        border: none !important;
        border-radius: 12px;
    }

    .card-title {
        color: var(--primary-color);
        font-weight: 700;
    }

    .list-group-item {
        border: none;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        color: var(--primary-color);
    }

    .list-group-item.active {
        background-color: var(--primary-color);
        color: white;
        border-radius: 8px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background-color: var(--jh-dark-red);
        border-color: var(--jh-dark-red);
    }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .blog-banner-title {
            font-size: 2rem;
        }

        .blog-banner-subtitle {
            font-size: 1.1rem;
        }

        .blog-hero-banner {
            height: 700px;
        }

        .blog-post-image {
            height: 200px;
        }

        .blog-post-content {
            padding: 20px;
        }

        .blog-post-title {
            font-size: 1.1rem;
        }

        .blog-post-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }

    @@media (max-width: 576px) {
        .blog-banner-title {
            font-size: 1.5rem;
        }

        .blog-banner-subtitle {
            font-size: 1rem;
        }

        .blog-hero-banner {
            height: 250px;
        }

        .blog-post-content {
            padding: 15px;
        }

        .blog-post-title {
            font-size: 1rem;
        }

        .blog-pagination .page-link {
            padding: 8px 12px;
            font-size: 0.9rem;
        }
    }
</style>
