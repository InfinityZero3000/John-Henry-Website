@model BlogCategoryViewModel
@{
    ViewData["Title"] = Model.Category?.Name ?? "Danh mục blog";
    ViewData["Description"] = Model.Category?.Description ?? "Danh mục blog";
}

<div class="container py-5">
    <!-- Category Header -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-3">@Model.Category?.Name</h1>
            @if (!string.IsNullOrEmpty(Model.Category?.Description))
            {
                <p class="lead text-muted">@Model.Category.Description</p>
            }
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            @if (Model.Posts.Any())
            {
                <div class="row">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-6 mb-4">
                            <article class="card blog-card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                {
                                    <img src="@post.FeaturedImageUrl" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-3">
                                        @if (post.Category != null)
                                        {
                                            <span class="badge bg-primary me-2">@post.Category.Name</span>
                                        }
                                        @if (post.IsFeatured)
                                        {
                                            <span class="badge bg-warning">Nổi bật</span>
                                        }
                                    </div>
                                    
                                    <h5 class="card-title">
                                        <a href="/Blog/Details/@post.Slug" class="text-decoration-none text-dark">@post.Title</a>
                                    </h5>
                                    
                                    @if (!string.IsNullOrEmpty(post.Excerpt))
                                    {
                                        <p class="card-text text-muted flex-grow-1">@post.Excerpt</p>
                                    }
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>@post.Author?.FirstName @post.Author?.LastName
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@((post.PublishedAt ?? post.CreatedAt).ToString("dd/MM/yyyy"))
                                            </small>
                                        </div>
                                        <div class="mt-2">
                                            <a href="/Blog/Details/@post.Slug" class="btn btn-outline-primary btn-sm">
                                                Đọc tiếp <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Phân trang bài viết" class="mt-5">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/blog/category/@Model.Category?.Slug?page=@(Model.CurrentPage - 1)">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="/blog/category/@Model.Category?.Slug?page=@i">@i</a>
                                </li>
                            }
                            
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/blog/category/@Model.Category?.Slug?page=@(Model.CurrentPage + 1)">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                    <h4>Chưa có bài viết nào</h4>
                    <p class="text-muted">Danh mục này chưa có bài viết. Hãy quay lại sau nhé!</p>
                    <a href="/Blog" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại trang blog
                    </a>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 2rem;">
                <!-- Categories -->
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h6 class="mb-0">
                            <i class="fas fa-folder me-2"></i>Danh mục
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <a href="/Blog" class="text-decoration-none">
                                    <i class="fas fa-list me-2"></i>Tất cả bài viết
                                </a>
                            </li>
                            @foreach (var category in Model.AllCategories)
                            {
                                <li class="mb-2">
                                    <a href="/blog/category/@category.Slug" 
                                       class="text-decoration-none @(category.Id == Model.Category?.Id ? "text-primary fw-bold" : "")">
                                        <i class="fas fa-tag me-2"></i>@category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Featured Posts -->
                @if (Model.FeaturedPosts.Any())
                {
                    <div class="card">
                        <div class="card-header bg-white">
                            <h6 class="mb-0">
                                <i class="fas fa-star me-2"></i>Bài viết nổi bật
                            </h6>
                        </div>
                        <div class="card-body">
                            @foreach (var featuredPost in Model.FeaturedPosts)
                            {
                                <div class="d-flex mb-3">
                                    @if (!string.IsNullOrEmpty(featuredPost.FeaturedImageUrl))
                                    {
                                        <img src="@featuredPost.FeaturedImageUrl" 
                                             class="me-3 rounded" 
                                             alt="@featuredPost.Title" 
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <a href="/Blog/Details/@featuredPost.Slug" class="text-decoration-none">
                                                @featuredPost.Title
                                            </a>
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @((featuredPost.PublishedAt ?? featuredPost.CreatedAt).ToString("dd/MM/yyyy"))
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .blog-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        
        .blog-card .card-body {
            position: relative;
            min-height: 300px; /* Đảm bảo chiều cao tối thiểu */
        }
        
        .blog-card .card-text {
            margin-bottom: 80px !important; /* Tạo không gian cho footer */
        }
        
        .blog-card .mt-auto {
            position: absolute;
            bottom: 20px;
            left: 20px;
            right: 20px;
            margin-top: 0 !important;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .pagination .page-link {
            color: #6c757d;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #dc3545;
            border-color: #dc3545;
        }
    </style>
}
