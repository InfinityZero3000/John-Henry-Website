        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .recent-post-content h6 {
        margin-bottom: 5px;
        line-height: 1.3;
    }

    .recent-post-content h6 a {
        color: #333;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .recent-post-content h6 a:hover {
        color: var(--primary-color);
    }

    .recent-post-date {
        color: #6c757d;
        font-size: 0.8rem;
    }

    .category-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .category-list li {
        border-bottom: 1px solid #e9ecef;
    }

    .category-list li a {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        color: #333;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .category-list li a:hover {
        color: var(--primary-color);
    }

    .category-list li a span {
        color: #6c757d;
        font-size: 0.85rem;
    }

    .newsletter-widget {
        background: linear-gradient(135deg, var(--primary-color), var(--jh-dark-red));
        color: white;
    }

    .newsletter-widget .widget-title {
        color: white;
    }

    .newsletter-widget .widget-title::after {
        background: white;
    }

    .newsletter-widget p {
        opacity: 0.9;
        margin-bottom: 20px;
    }

    .newsletter-form .form-control {
        border: none;
        border-radius: 8px 0 0 8px;
        padding: 12px 15px;
    }

    .newsletter-form .btn {
        background: white;
        color: var(--primary-color);
        border: none;
        border-radius: 0 8px 8px 0;
        padding: 12px 20px;
        font-weight: 600;
    }

    .newsletter-form .btn:hover {
        background: #f8f9fa;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .blog-sidebar {
            padding-left: 0;
            margin-top: 40px;
        }

        .blog-article {
            padding: 25px;
        }

        .article-title {
            font-size: 1.8rem;
        }

        .article-content {
            font-size: 1rem;
        }

        .article-tags,
        .article-share {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }
    }
</style>
