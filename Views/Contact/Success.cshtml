@{
    ViewData["Title"] = "Gửi liên hệ thành công";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-success">
            <div class="card-header bg-success text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-check-circle fa-3x"></i>
                </h4>
                <h5 class="mt-3">Gửi liên hệ thành công!</h5>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-success" role="alert">
                    <h6 class="alert-heading">
                        <i class="fas fa-paper-plane"></i>
                        Cảm ơn bạn đã liên hệ với chúng tôi!
                    </h6>
                    <p class="mb-0">
                        Tin nhắn của bạn đã được gửi thành công. Chúng tôi sẽ phản hồi trong thời gian sớm nhất.
                    </p>
                </div>

                <div class="my-4">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                            <h6>Thời gian phản hồi</h6>
                            <small class="text-muted">24 giờ (ngày làm việc)</small>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-envelope fa-2x text-success mb-2"></i>
                            <h6>Phản hồi qua email</h6>
                            <small class="text-muted">Kiểm tra hộp thư của bạn</small>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-headset fa-2x text-info mb-2"></i>
                            <h6>Hỗ trợ trực tuyến</h6>
                            <small class="text-muted">Chat với chúng tôi</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-block">
                            <i class="fas fa-home"></i>
                            Về trang chủ
                        </a>
                    </div>
                    <div class="col-md-6 mb-2">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-block">
                            <i class="fas fa-shopping-bag"></i>
                            Xem sản phẩm
                        </a>
                    </div>
                </div>

                <div class="mt-4">
                    <h6>Cần hỗ trợ ngay?</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <a href="tel:1900123456" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-phone"></i>
                                Gọi hotline: 1900 123 456
                            </a>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-info btn-sm" onclick="openLiveChat()">
                                <i class="fas fa-comments"></i>
                                Chat trực tuyến
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-footer bg-light text-center">
                <small class="text-muted">
                    <i class="fas fa-clock"></i>
                    Thời gian gửi: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </small>
            </div>
        </div>

        <!-- Thông tin bổ sung -->
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle"></i>
                    Thông tin hữu ích
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Chính sách hỗ trợ</h6>
                        <ul class="small">
                            <li>Phản hồi trong 24h (ngày làm việc)</li>
                            <li>Hỗ trợ qua email và điện thoại</li>
                            <li>Chat trực tuyến từ 8:00 - 22:00</li>
                            <li>FAQ và hướng dẫn chi tiết</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Các kênh liên hệ khác</h6>
                        <ul class="small">
                            <li><i class="fab fa-facebook text-primary"></i> <a href="#">Facebook</a></li>
                            <li><i class="fab fa-instagram text-danger"></i> <a href="#">Instagram</a></li>
                            <li><i class="fab fa-youtube text-danger"></i> <a href="#">YouTube</a></li>
                            <li><i class="fab fa-tiktok text-dark"></i> <a href="#">TikTok</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tin nhắn khuyến khích -->
        <div class="alert alert-light mt-3 text-center">
            <h6 class="mb-2">
                <i class="fas fa-heart text-danger"></i>
                Cảm ơn bạn đã tin tưởng John Henry Fashion!
            </h6>
            <p class="mb-0 small">
                Chúng tôi luôn nỗ lực mang đến trải nghiệm mua sắm tốt nhất cho khách hàng.
                Ý kiến của bạn rất quan trọng với chúng tôi!
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openLiveChat() {
            // Tích hợp với hệ thống chat (Tawk.to, Intercom, etc.)
            alert('Tính năng chat trực tuyến sẽ sớm được ra mắt!');
            
            // Hoặc mở cửa sổ chat thực tế
            // window.open('/chat', 'livechat', 'width=400,height=600');
        }

        // Tự động hiển thị thông báo sau 3 giây
        setTimeout(function() {
            if (typeof toastr !== 'undefined') {
                toastr.success('Cảm ơn bạn đã liên hệ! Chúng tôi sẽ phản hồi sớm nhất.', 'Thành công!');
            }
        }, 3000);

        // Theo dõi hành vi người dùng (analytics)
        if (typeof gtag !== 'undefined') {
            gtag('event', 'contact_form_success', {
                'event_category': 'engagement',
                'event_label': 'contact_form'
            });
        }
    </script>
    
    <style>
        .card-header.bg-success {
            animation: pulse 2s infinite;
        }
        
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }
        
        .fas.fa-check-circle {
            animation: bounceIn 1s ease-in;
        }
        
        @@keyframes bounceIn {
            0% { transform: scale(0); opacity: 0; }
            50% { transform: scale(1.1); opacity: 0.8; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
}
