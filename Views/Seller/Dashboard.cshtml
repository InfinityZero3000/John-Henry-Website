@model JohnHenryFashionWeb.ViewModels.SellerDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Người bán";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<div class="admin-content">
    <!-- Page Header -->
    <div class="admin-page-header">
        <div class="admin-flex-between">
            <div>
                <div class="d-flex align-items-center mb-2">
                    <div class="live-indicator"></div>
                    <span class="fw-medium ms-2">Live Dashboard</span>
                </div>
                <h1 class="admin-page-title">
                    <i data-lucide="gauge"></i>
                    Dashboard Người bán
                </h1>
                <p class="admin-page-description">Tổng quan về hoạt động bán hàng của bạn</p>
            </div>
            <div>
                <a href="@Url.Action("CreateProduct", "Seller")" class="admin-btn admin-btn-primary admin-btn-lg">
                    <i data-lucide="plus"></i>Thêm sản phẩm mới
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Sản phẩm của tôi</h3>
                    <p class="value">@Model.MyProductsCount</p>
                    <p class="change positive">
                        <i data-lucide="trending-up"></i>
                        Tăng 12% so với tháng trước
                    </p>
                </div>
                <div class="admin-stat-card-icon primary">
                    <i data-lucide="package"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đơn hàng</h3>
                    <p class="value">@Model.MyOrdersCount</p>
                    <p class="change positive">
                        <i data-lucide="trending-up"></i>
                        Tăng 8% so với tháng trước
                    </p>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="shopping-cart"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Doanh thu tổng</h3>
                    <p class="value">@Model.MyRevenue.ToString("N0") ₫</p>
                    <p class="change positive">
                        <i data-lucide="trending-up"></i>
                        Tăng 15% so với tháng trước
                    </p>
                </div>
                <div class="admin-stat-card-icon warning">
                    <i data-lucide="dollar-sign"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Doanh thu tháng</h3>
                    <p class="value">@Model.MonthlyRevenue.ToString("N0") ₫</p>
                    <p class="change positive">
                        <i data-lucide="trending-up"></i>
                        Tăng 22% so với tháng trước
                    </p>
                </div>
                <div class="admin-stat-card-icon info">
                    <i data-lucide="calendar"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Đánh giá chưa phản hồi</h3>
                    <p class="value">@Model.PendingReviewsCount</p>
                    <div class="mt-3">
                        <a href="@Url.Action("Reviews", "Seller")" class="admin-btn admin-btn-danger admin-btn-sm">
                            <i data-lucide="reply"></i>Quản lý đánh giá
                        </a>
                    </div>
                </div>
                <div class="admin-stat-card-icon primary">
                    <i data-lucide="star"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Mã giảm giá hoạt động</h3>
                    <p class="value">@Model.ActiveCouponsCount</p>
                    <div class="mt-3">
                        <a href="@Url.Action("Coupons", "Seller")" class="admin-btn admin-btn-primary admin-btn-sm">
                            <i data-lucide="settings"></i>Quản lý mã giảm giá
                        </a>
                    </div>
                </div>
                <div class="admin-stat-card-icon info">
                    <i data-lucide="ticket"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Sản phẩm sắp hết hàng</h3>
                    <p class="value">@Model.LowInventoryProductsCount</p>
                    <div class="mt-3">
                        <a href="@Url.Action("StoreManagement", "Seller")" class="admin-btn admin-btn-warning admin-btn-sm">
                            <i data-lucide="warehouse"></i>Quản lý kho
                        </a>
                    </div>
                </div>
                <div class="admin-stat-card-icon warning">
                    <i data-lucide="alert-triangle"></i>
                </div>
            </div>
        </div>

        <div class="admin-stat-card">
            <div class="admin-stat-card-content">
                <div class="admin-stat-card-info">
                    <h3>Cửa hàng</h3>
                    <p class="value" style="font-size: 1.5rem;">Quản lý</p>
                    <div class="mt-3">
                        <a href="@Url.Action("StoreManagement", "Seller")" class="admin-btn admin-btn-secondary admin-btn-sm">
                            <i data-lucide="settings"></i>Cài đặt cửa hàng
                        </a>
                    </div>
                </div>
                <div class="admin-stat-card-icon success">
                    <i data-lucide="store"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="section-card">
        <div class="section-card-header">
            <h3>
                <i data-lucide="zap"></i>
                Thao tác nhanh
            </h3>
        </div>
        <div class="section-card-body">
            <div class="quick-actions-grid">
                <a href="@Url.Action("CreateProduct", "Seller")" class="quick-action-btn">
                    <i data-lucide="plus"></i>
                    <span>Thêm sản phẩm</span>
                </a>
                <a href="@Url.Action("Products", "Seller")" class="quick-action-btn">
                    <i data-lucide="package"></i>
                    <span>Quản lý sản phẩm</span>
                </a>
                <a href="@Url.Action("Orders", "Seller")" class="quick-action-btn">
                    <i data-lucide="shopping-cart"></i>
                    <span>Đơn hàng</span>
                </a>
                <a href="@Url.Action("Analytics", "Seller")" class="quick-action-btn">
                    <i data-lucide="bar-chart-3"></i>
                    <span>Thống kê</span>
                </a>
                <a href="@Url.Action("Coupons", "Seller")" class="quick-action-btn">
                    <i data-lucide="ticket"></i>
                    <span>Mã giảm giá</span>
                </a>
                <a href="@Url.Action("Settings", "Seller")" class="quick-action-btn">
                    <i data-lucide="settings"></i>
                    <span>Cài đặt</span>
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Initialize Lucide icons
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
        
        // Add any dashboard-specific JavaScript here
        console.log('Seller Dashboard loaded');
    </script>
}
