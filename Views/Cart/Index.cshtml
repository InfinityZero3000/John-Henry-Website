                grid-column: 1 / -1;
                text-align: left;
                padding-left: 40px;
                margin-top: -8px;
            }
            
            .cart-item-quantity {
                grid-column: 1 / 3;
                justify-content: flex-start;
                padding-left: 40px;
            }
            
            .cart-item-delete {
                grid-column: 3 / -1;
                justify-content: flex-end;
            }
        }
        
        @@media (max-width: 576px) {
            .cart-item-card {
                padding: 12px;
            }
            
            .cart-item-row {
                gap: 8px;
            }
            
            .cart-item-image {
                width: 60px;
                height: 60px;
            }
        }
        
        .cart-summary {
            position: sticky;
            top: 2rem;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
        
        .total-row {
            font-size: 1.1rem;
        }
        
        /* Coupon styles */
        .coupon-section {
            padding: 1rem 0;
        }
        
        .coupon-section .input-group {
            margin-bottom: 0.5rem;
        }
        
        .applied-coupon .alert {
